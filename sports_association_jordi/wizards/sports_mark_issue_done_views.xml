<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sports_mark_issue_done" model="ir.ui.view">
        <field name="name">sports.mark.issue.done</field>
        <field name="model">sports.mark.issue.done</field>
        <field name="arch" type="xml">
            <form string="Mark Issue Done">
                <group>
                </group>
                <footer>
                    <button string="Mark Done" class="btn-primary" name="mark_done" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sports_mark_issue_done" model="ir.actions.act_window">
        <field name="name">Mark Issue Done</field>
        <field name="res_model">sports.mark.issue.done</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sports_association_jordi.model_sports_issue" />
        <field name="binding_view_types">list,form</field>
    </record>

</odoo>
