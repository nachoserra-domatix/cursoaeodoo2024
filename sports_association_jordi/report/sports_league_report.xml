<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_sport_league">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="mt-4">
                            <span>League # </span>
                            <span t-field="o.name"></span>
                        </h2>
                        <div class="row mt-4 mb-2" name="league">
                            <div t-if="o.start_date" class="col-auto col-3 mw-100 mb-2" name="start_date">
                                <strong>Start date: </strong><br/>
                                <span class="m-0" t-field="o.start_date"/>
                            </div>
                            <div t-if="o.end_date" class="col-auto col-3 mw-100 mb-2" name="end_date">
                                <strong>End date: </strong><br/>
                                <span class="m-0" t-field="o.end_date"/>
                            </div> 
                        </div>
                        <table class="table table-sm table-bordered mt-4">
                            <thead style="display: tabole-row-group">
                                <tr>
                                    <th name="th_team" class="text-start">Team</th>
                                    <th name="th_points" class="text-end">Points</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="o.league_lines" t-as="p">
                                    <tr>
                                        <td name="team" class="text-start">
                                            <span t-field="p.team_id"/>
                                        </td>
                                        <td name="points" class="text-end">
                                            <span t-field="p.points"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>   

                    </div>
                </t>
            </t>
        </t>
    </template>
    <record id="action_report_sport_league" model="ir.actions.report">
    	<field name="name">League</field>
    	<field name="model">sports.league</field>
    	<field name="report_type">qweb-pdf</field>
    	<field name="report_name">sports_association_jordi.report_sport_league</field>
    	<field name="report_file">sports_association_jordi.report_sport_league</field>
    	<field name="print_report_name">(object.name)</field>
    	<field name="binding_model_id" ref="model_sports_league"/>
    	<field name="binding_type">report</field>
	</record>

    <record id="paperformat_sport_issue" model="report.paperformat">
        <field name="name">Sports Issue</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

</odoo>
