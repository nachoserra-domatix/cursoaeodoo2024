<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_sport_issue_1">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <table class="table table-sm table-bordered mt-4">
                        <thead style="display: tabole-row-group">
                            <tr>
                                <th name="name" class="text-start">Name</th>
                                <th name="date" class="text-start">Date</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-foreach="docs" t-as="o">
                                <tr>
                                    <td name="name_issue" class="text-start">
                                        <span t-field="o.name" />
                                    </td>
                                    <td name="date" class="text-start">
                                        <span t-field="o.date" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
    <template id="report_sport_issue">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="mt-4">
                            <span>Issue # </span>
                            <span t-field="o.name"></span>
                        </h2>
                        <div class="row mt-4 mb-2" name="issues">
                            <div t-if="o.user_id" class="col-auto col-3 mw-100 mb-2" name="user_id">
                                <strong>User: </strong><br/>
                                <span class="m-0" t-field="o.user_id"/>
                            </div>
                            <div t-if="o.date" class="col-auto col-3 mw-100 mb-2" name="date">
                                <strong>Date: </strong><br/>
                                <span class="m-0" t-field="o.date"/>
                            </div> 
                            <div t-if="o.cost" class="col-auto col-3 mw-100 mb-2" name="cost">
                                <strong>Cost: </strong><br/>
                                <span class="m-0" t-field="o.cost"/>
                            </div>
                        </div>
                        <table class="table table-sm table-bordered mt-4">
                            <thead style="display: tabole-row-group">
                                <tr>
                                    <th name="th action" class="text-start">Action</th>
                                    <th name="th_state" class="text-start">State</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="o.action_ids" t-as="p">
                                    <tr>
                                        <td name="id_action" class="text-start">
                                            <span t-field="p.name"/>
                                        </td>
                                        <td name="id_state" class="text-start">
                                            <span t-field="p.state"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>   

                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="paperformat_sport_issue" model="report.paperformat">
        <field name="name">Sports Issue</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">219</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">3</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_report_sport_issue" model="ir.actions.report">
    	<field name="name">Issue</field>
    	<field name="model">sports.issue</field>
    	<field name="report_type">qweb-pdf</field>
    	<field name="report_name">sports_association_jordi.report_sport_issue</field>
    	<field name="report_file">sports_association_jordi.report_sport_issue</field>
    	<field name="print_report_name">(object.name)</field>
    	<field name="binding_model_id" ref="model_sports_issue"/>
    	<field name="binding_type">report</field>
        <!-- <field name="paperformat_id" ref="sports_association_jordi.paperformat_sport_issue"/> -->
	</record>
    <record id="action_report_sport_issue_1" model="ir.actions.report">
    	<field name="name">Issue one page</field>
    	<field name="model">sports.issue</field>
    	<field name="report_type">qweb-pdf</field>
    	<field name="report_name">sports_association_jordi.report_sport_issue_1</field>
    	<field name="report_file">sports_association_jordi.report_sport_issue_1</field>
    	<field name="print_report_name">(object.name)</field>
    	<field name="binding_model_id" ref="model_sports_issue"/>
    	<field name="binding_type">report</field>
	</record>

</odoo>
