<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sports_match_tree_view" model="ir.ui.view">
        <field name="name">sports.match.tree.view</field>
        <field name="model">sports.match</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Matches">
                <field name="date" optional="show"/>
                <field name="sport_id" optional="show"/>
                <field name="league_id" optional="show"/>
                <field name="winner_team_id" optional="show"/>
                <field name="winner_score" optional="hide"/>
            </tree>
        </field>
    </record>  
    <record id="sports_match_view_form" model="ir.ui.view">
        <field name="name">sports_match.view.form</field>
        <field name="model">sports.match</field>
        <field name="arch" type="xml">
            <form string="Match">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="date" placeholder="Date Match"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sport_id" options="{'no_create': True}"/>
                            <field name="league_id"/>
                        </group>
                        <group>
                            <field name="winner_team_id"/>
                            <field name="winner_score"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="name" string="Lines">
                            <field name="match_lines" >
                                <tree editable="bottom" string="Lines">
                                    <field name="team_id"/>
                                    <field name="score"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="sports_match_view_graph" model="ir.ui.view">
        <field name="name">sports.match.view.graph</field>
        <field name="model">sports.match</field>
        <field name="arch" type="xml">
            <graph string="Matches" type="bar">
                <field name="sport_id" type="row"/>
                <field name="winner_team_id" type="measure"/>
            </graph>
        </field>
    </record>
    <record id="sports_match_view_pivot" model="ir.ui.view">
        <field name="name">sports.match.view.pivot</field>
        <field name="model">sports.match</field>
        <field name="arch" type="xml">
            <pivot string="Matches" disable_linking="true">
                <field name="date" type="row"/>
                <field name="sport_id" type="col"/>
                <field name="winner_team_id" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="sports_match_view_calendar" model="ir.ui.view">
        <field name="name">sports.match.view.calendar</field>
        <field name="model">sports.match</field>
        <field name="arch" type="xml">
            <calendar string="Matches" date_start="date">
                <field name="winner_team_id"/>
                <field name="sport_id"/>
            </calendar>
        </field>
    </record>
    <record id="action_sports_match" model="ir.actions.act_window">
        <field name="name">sports.match</field>
        <field name="res_model">sports.match</field>
       <field name="view_mode">tree,form,graph,pivot,calendar</field>
       <field name="context">{}</field>
       <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Match
            </p>
        </field>
    </record>
</odoo>