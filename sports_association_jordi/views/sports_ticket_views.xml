<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sports_ticket_tree_view" model="ir.ui.view">
        <field name="name">sports_ticket.tree.view</field>
        <field name="model">sports.ticket</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Tickets">
                <field name="name"/>
                <field name="partner_id" optional="show"/>
                <field name="match_id"/>
            </tree>
        </field>
    </record>  

    <record id="sports_ticket_view_form" model="ir.ui.view">
        <field name="name">sports_ticket.view.form</field>
        <field name="model">sports.ticket</field>
        <field name="arch" type="xml">
            <form string="Tickets">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="match_id"/>
                        <field name="partner_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_sport_ticket" model="ir.actions.act_window">
        <field name="name">sport.ticket</field>
        <field name="res_model">sports.ticket</field>
       <field name="view_mode">tree,form</field>
       <field name="context">{}</field>
       <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Ticket
            </p>
        </field>
    </record>

</odoo>
