<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sport_issue_tree_view" model="ir.ui.view">
        <field name="name">sports_issue.tree.view</field>
        <field name="model">sports.issue</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Issues">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="date" optional="show"/>
                <field name="user_id" optional="hide"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>  
    <record id="sport_issue_view_form" model="ir.ui.view">
        <field name="name">sports_issue.view.form</field>
        <field name="model">sports.issue</field>
        <field name="arch" type="xml">
            <form string="Issue">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,done" options="{'clickable':1}"/>
                    <button string="To Open" invisible="state not in ('draft')" name="action_open" type="object" class="btn-primary"/>
                    <button string="To Draft" invisible="state in ('draft')" name="action_draft" type="object" class="btn-secondary"/>
                    <button string="Done" invisible="state in ('done')" name="action_done" type="object" class="btn-success"/>
                    <button string="Add Tag" name="action_add_tag" type="object" class="oe_highlight" groups="sports_association_jordi.res_groups_sports_association_manager"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Issue Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="assigned"/>
                            <field name="user_id" context="{'search_default_filter_no_share':'1'}" options="{'no_quick_create': True,'no_open':True}"/>
                            <field name="clinic_id" domain="[('available', '=', True)]" />
                            <field name="cost"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="assistance" widget="boolean_toggle"/>
                            <field name="tag_ids" options="{'no_quick_create': True,'no_create':True}" widget="many2many_tags"/>
                            <field name="user_phone"/>
                        </group>
                        <notebook>
                            <page name="description" string="Description">
                                <field name="description"/>
                            </page>
                            <page name="solution" string="Solution">
                                <field name="solution"/>
                            </page> 
                                <page name="name" string="Actions">
                                    <field name="action_ids" context="{'tree_view_ref':'sports_association_jordi.sports_action_tree_view', 
                                                                        'form_view_ref':'sports_association_jordi.sport_action_form_view','default_state':state}"/>
                                </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="sport_issue_view_search" model="ir.ui.view">
        <field name="name">sport_issue_view_search</field>
        <field name="model">sports.issue</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/>
                <field name="tag_ids"/>
                <separator/>
                <filter string="Open" name="open" domain="[('state', '=', 'open')]"/>
                <filter string="Draft" name="draft" domain="[('state','=', 'draft')]"/>
                 <filter name="user" string="User" context="{'group_by': 'user_id'}" />
                 <filter name="date" string="Date" context="{'group_by': 'date'}" />
            </search>
        </field>
    </record>
    <record id="sport_issue_view_kanban" model="ir.ui.view">
        <field name="name">sport_issue.view.kanban</field>
        <field name="model">sports.issue</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="date"/> 
                <field name="user_id"/>
                <field name="state"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="date" />
                                </div>
                                <div>
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="clinic_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </t>
                </templates>
             </kanban>
        </field>
    </record>
    <record id="sports_issue_view_pivot" model="ir.ui.view">
        <field name="name">sports_issue.view.pivot</field>
        <field name="model">sports.issue</field>
        <field name="arch" type="xml">
            <pivot string="Issue" disable_linking="true">
                <field name="date" type="row"/>
                <field name="user_id" type="col"/>
                <field name="cost" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="sports_issue_view_graph" model="ir.ui.view">
        <field name="name">sports_issue.view.graph</field>
        <field name="model">sports.issue</field>
        <field name="arch" type="xml">
            <graph string="Issues" type="bar">
                <field name="user_id" type="row"/>
                <field name="cost" type="measure"/>
            </graph>
        </field>
    </record>
    <record id="sports_issue_view_calendar" model="ir.ui.view">
        <field name="name">sports_issue.view.calendar</field>
        <field name="model">sports.issue</field>
        <field name="arch" type="xml">
            <calendar string="Issues" date_start="date" color="user_id">
                <field name="name"/>
                <field name="cost"/>
            </calendar>
        </field>
    </record>
    <record id="action_sport_issue" model="ir.actions.act_window">
        <field name="name">sport.issues</field>
        <field name="res_model">sports.issue</field>
       <field name="view_mode">tree,form,kanban,pivot,graph,calendar</field>
       <field name="context">{}</field>
       <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new issue
            </p>
        </field>
    </record>
</odoo>