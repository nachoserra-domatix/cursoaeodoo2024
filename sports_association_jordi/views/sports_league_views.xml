<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sports_league_tree_view" model="ir.ui.view">
        <field name="name">sports_league.tree.view</field>
        <field name="model">sports.league</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Leagues">
                <field name="name"/>
                <field name="sport_id" optional="show"/>
                <field name="start_date" optional="show"/>
                <field name="end_date" optional="show"/>
            </tree>
        </field>
    </record>  
    <record id="sports_league_view_form" model="ir.ui.view">
        <field name="name">sports_league.view.form</field>
        <field name="model">sports.league</field>
        <field name="arch" type="xml">
            <form string="League">
                <header>
                    <button string="Recalculate Points" name="action_recalculate_points" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="League Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sport_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="name" string="Lines">
                            <field name="league_lines" >
                                <tree editable="bottom" string="Lines">
                                    <field name="team_id" domain="[('sport_id', '=', parent.sport_id)]"/>
                                    <field name="points"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_sports_league" model="ir.actions.act_window">
        <field name="name">sports.league</field>
        <field name="res_model">sports.league</field>
       <field name="view_mode">tree,form</field>
       <field name="context">{}</field>
       <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new League
            </p>
        </field>
    </record>
</odoo>