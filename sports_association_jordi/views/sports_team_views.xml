<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sports_team_tree_view" model="ir.ui.view">
        <field name="name">sports_team.tree.view</field>
        <field name="model">sports.team</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Teams">
                <field name="name"/>
                <field name="logo" optional="show"/>
                <field name="sport_id" optional="show"/>
                <field name="count_players"/>
            </tree>
        </field>
    </record>  

    <record id="sports_sport_view_form" model="ir.ui.view">
        <field name="name">sports_team.view.form</field>
        <field name="model">sports.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <header>
                    <button string="Starters" name="all_marked" type="object" class="btn-success"/>
                    <button string="Substitutes" name="all_substitute" type="object" class="btn-danger"/>
                    <button string="Add players" name="action_add_players" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_show_players" icon="fa-person-running">
                            <field string="Players" name="count_players" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Team Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sport_id"/>
                        </group>
                        <group>
                            <field name="logo" widget="image" class="oe-avatar"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="name" string="Players">
                            <field name="players_ids" context="{'tree_view_ref':'sports_association_jordi.sports_player_simple_tree_view', 
                                                                'form_view_ref':'sports_association_jordi.sports_player_simple_view_form'}"/>
                                <!-- <tree editable="bottom" string="Players">
                                    <field name="name"/>
                                    <field name="age"/>
                                    <field name="position"/>
                                    <field name="starter"/>
                                </tree>
                            </field>-->
                        </page>
                    </notebook>
                    
                </sheet>
            </form>
        </field>
    </record>
    <record id="sports_team_view_kanban" model="ir.ui.view">
        <field name="name">sports.team.view.kanban</field>
        <field name="model">sports.team</field>
        <field name="arch" type="xml">
            <kanban default_group_by="sport_id">
                <field name="name"/>
                <field name="logo" widget="image" class="oe_avatar"/>
                <field name="count_players"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_content flex-grow-1">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                            </div>
                            <div class="o_kanban_record_subtitle">
                                <field name="count_players" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="action_sport_team" model="ir.actions.act_window">
        <field name="name">sport.team</field>
        <field name="res_model">sports.team</field>
       <field name="view_mode">tree,form,kanban</field>
       <field name="context">{}</field>
       <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Team
            </p>
        </field>
    </record>
</odoo>