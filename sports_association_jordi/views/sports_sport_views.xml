<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sports_sport_tree_view" model="ir.ui.view">
        <field name="name">sports_sports.tree.view</field>
        <field name="model">sports.sport</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Sports">
                <field name="name"/>
                <field name="description" optional="show"/>
            </tree>
        </field>
    </record>  

    <record id="sports_sport_view_form" model="ir.ui.view">
        <field name="name">sports_sport.view.form</field>
        <field name="model">sports.sport</field>
        <field name="arch" type="xml">
            <form string="Clinic">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Sport Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page name="name" string="string">
                            <field name="team_ids">
                                <tree editable="bottom" string="Teams">
                                    <field name="name"/>
                                    <field name="logo"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_sport_sport" model="ir.actions.act_window">
        <field name="name">sport.sport</field>
        <field name="res_model">sports.sport</field>
       <field name="view_mode">tree,form</field>
       <field name="context">{}</field>
       <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Sport
            </p>
        </field>
    </record>
</odoo>