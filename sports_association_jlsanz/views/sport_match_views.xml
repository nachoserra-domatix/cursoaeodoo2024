<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sport_match_view_tree" model="ir.ui.view">
        <field name="name">sport.match.view.tree</field>
        <field name="model">sport.match</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Matches">
                <field name="sport_id" />
                <field name="league_id" />
                <field name="date_time" />
                <field name="matchpoints" />
                <field name="winner" />
            </tree>
        </field>
    </record>

    <record id="sport_match_view_form" model="ir.ui.view">
        <field name="name">sport.match.view.form</field>
        <field name="model">sport.match</field>
        <field name="arch" type="xml">
            <form string="Matches">
                <sheet>
                    <group>
                        <field name="sport_id" />
                        <field name="league_id" />
                        <field name="date_time" />
                        <field name="matchpoints" />
                        <field name="winner" />
                    </group>
                    <notebook>
                        <page name="match_results" string="Results">
                            <field name="match_result_ids" >
                                <tree editable="bottom">
                                    <field name="team_id" domain="[('sport_id', '=', parent.sport_id)]"/>
                                    <field name="score" />
                                </tree>
                           </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

        <record id="action_sport_match" model="ir.actions.act_window">
            <field name="name">Sport Matches</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sport.match</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new sport match
                </p>
            </field>
        </record>


</odoo>