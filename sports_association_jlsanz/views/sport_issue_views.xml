<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="sport_issue_view_tree" model="ir.ui.view">
        <field name="name">sport.issue.view.tree</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Issues">
                <field name="sequence" widget="handle"/>
                <field name="name" />
                <field name="date" optional="show" />
                <field name="user_id" optional="hide"/>
                <field name="state" widget="badge" />
            </tree>
        </field>
    </record>

    <record id="sport_issue_view_form" model="ir.ui.view">
        <field name="name">sport.issue.view.form</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <form string="Issues">
                <header>
                    <field name="state" options="{'clickable':1}" widget="statusbar" statusbar_visible="draft,open,done" />
                    <button string="To open" invisible="state not in ('draft')" name="action_open" type="object" class="oe_highlight"></button>
                    <button string="To draft" invisible="state in ('draft')" name="action_draft" type="object" class="btn-secondary"></button>
                    <button string="Done" invisible="state in ('done')" name="action_done" type="object" class="oe_highlight"></button>
                    <button string="AddTags" name="action_add_tags_like_name" groups="sports_association_jlsanz.res_groups_sports_association_manager" type="object" class="oe_highlight"></button>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Issue Nmae" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="assigned"></field>
                            <field name="user_id" context="{'search_default_filter_no_share': '1'}" options="{'no_open': True, 'no_quick_create': True}"/>
                            <field name="user_phone" />
                            <field name="clinic_ids" domain="[('available','=',True)]"/>
                            <field name="cost" />
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create': True}"/>
                            <field name="assistance" widget="boolean_toggle"/>
                            <field name="player_id" />
                        </group>
                        <notebook>
                            <page name="description" string="Description">
                                <field name="description"/>
                            </page>
                            <page name="solution" string="Solution">
                                <field name="solution"/>
                            </page>
                            <page name="actions" string="Actions">
                                <field name="action_ids" context="{'default_state': state}">
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="sport_issue_view_search" model="ir.ui.view">
        <field name="name">sport_issue.view.search</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <search string="Issues">
                <field name="name" string="Name or Description" filter_domain="['|',('name', 'ilike', self), ('description','ilike', self)]" />
                <field name="user_id" />
                <field name="clinic_ids" />
                <field name="tag_ids" />
                <filter name="open" string="Open" domain="[('state', '=', 'open')]" />
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]" />
                <filter name="user" string="User" context="{'group_by': 'user_id'}" />
                <filter name="date" string="Date" context="{'group_by':'date'}"/>
            </search>
        </field>
    </record>
    
    <record id="sport_issue_view_kanban" model="ir.ui.view">
        <field name="name">sport_issue.view.kanban</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" >
                <field name="name"></field>
                <field name="date"></field>
                <field name="user_id"></field>
                <field name="clinic_ids"></field>
                <field name="tag_ids"></field>
                <field name="color"></field>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
    
                    <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                        <div class="oe_kanban_content flex-grow-1">
                        <div class="oe_kanban_details">
                            <strong class="o_kanban_record_title"><field name="name"/></strong>
                        </div>
                        <div class="o_kanban_record_subtitle">
                            <field name="date"/>
                        </div>
                        <div>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </div>
                        </div>
                        <div class="oe_kanban_footer">
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="clinic_ids"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record id="sport_issue_view_pivot" model="ir.ui.view">
        <field name="name">sport_issue.view.pivot</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <pivot string="Issues" disable_linking="true">
                <field name="user_id" type="row" />
                <field name="date" type="col" />
                <field name="cost" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="sport_issue_view_graph" model="ir.ui.view">
        <field name="name">sport_issue.view.graph</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <graph string="Issues" type="bar">
                <field name="user_id"></field>
                <field name="cost" type="measure"></field>
            </graph>
        </field>
    </record>

    <record id="sport_issue_view_calendar" model="ir.ui.view">
        <field name="name">sport_issue.view.calendar</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <calendar string="Issues" date_start="date" color="user_id">
                <field name="name" />
                <field name="user_id" />
                <field name="state" invisible="1" filters="1"/>
            </calendar>
        </field>
    </record>

    <record id="action_sport_issue" model="ir.actions.act_window">
        <field name="name">Sport Issues</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sport.issue</field>
        <field name="view_mode">tree,form,kanban,pivot,graph,calendar</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport issue
            </p>
        </field>
    </record>

</odoo>