<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="sport_player_view_tree" model="ir.ui.view">
        <field name="name">sport.player.view.tree</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Sports">
                <field name="name" />
                <field name="birthdate" />
                <field name="position" />
                <field name="team_id" />
                <field name="starter" />
            </tree>
        </field>
    </record>


    <record id="sport_player_view_simple_tree" model="ir.ui.view">
        <field name="name">sport.player.simple.view.tree</field>
        <field name="model">sport.player</field>
        <field name="priority" eval="100"></field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Sports">
                <field name="name" />
                <field name="age" />
            </tree>
        </field>
    </record>

    <record id="sport_player_view_form" model="ir.ui.view">
        <field name="name">sport.player.view.form</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <form string="Player">
                <sheet>
                    <header>
                        <button string="Create Issue" name="%(action_sport_create_issue)d" context="{'default_player_id': id}" type="action" class="oe_highlight"></button>
                    </header>
                    <group>
                        <group>
                        <field name="active" invisible="1" />
                        <field name="partner_id" invisible="1" />
                        <field name="name" />
                        <field name="birthdate" />
                        <field name="age" />
                        <field name="position" />
                        <field name="street" />
                        <field name="city" />
                        <field name="country_id" />
                        <field name="zip" />
                        </group>
                        <group>
                        <field name="team_id" domain="[('sport_id', '!=', False)]"/>
                        <field name="starter" />
                        <field name="sport_name" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_player_view_simple_form" model="ir.ui.view">
        <field name="name">sport.player.view.simple.form</field>
        <field name="model">sport.player</field>
        <field name="priority" eval="100"></field>
        <field name="arch" type="xml">
            <form string="Player">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="birthdate" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_player_view_search" model="ir.ui.view">
        <field name="name">sport.player.view.search</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <search string="Players">
                <field name="name" />
                <field name="team_id" />
                <field name="sport_name" />
                <field name="birthdate" />
                <filter name="team_id" string="Team" />
                <filter name="sport_name" string="Sport" />
                <filter name="starter" string="Starter" domain="[('starter', '=', 'True')]" />
                <filter name="team_id" string="Team" context="{'group_by': 'team_id'}" />
                <filter name="sport_name" string="Sport" context="{'group_by': 'sport_name'}" />
                <filter name="birthdate" string="Date" context="{'group_by':'birthdate'}"/>

                <!-- string="Name or Description" filter_domain="['|',('name', 'ilike', self), ('description','ilike', self)]" /> -->
            </search>
        </field>
    </record>

<record id="action_sport_player" model="ir.actions.act_window">
    <field name="name">Sport Player</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">sport.player</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create a new player
        </p>
    </field>
</record>

</odoo>