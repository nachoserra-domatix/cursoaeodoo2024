<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sport_league_view_tree" model="ir.ui.view">
        <field name="name">sport.league.view.tree</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Leagues">
                <field name="name" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="sport_id" />
            </tree>
        </field>
    </record>

    <record id="sport_league_view_form" model="ir.ui.view">
        <field name="name">sport.league.view.form</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <form string="Leagues">
                <header>
                    <button string="Set Score" name="set_score" type="object" class="oe_highlight"/>
                    <button string="Create Match" name="%(action_sport_create_match)d" context="{'default_league_id': id}" type="action" class="oe_highlight"></button>
                </header>
                <sheet>
                                        <!-- smart button -->
                                        <div class="oe_button_box" name="button_box" >
                                            <button type="object" name="action_view_match" class="oe_stat_button" icon="fa-futbol-o" >
                                                <field string="match_count" name="match_count" widget="statinfo" />
                                            </button>
                                        </div>
                    <group>
                        <field name="name"></field>
                        <field name="start_date" />
                        <field name="end_date"></field>
                        <field name="sport_id"></field>
                    </group>
                    <notebook>
                        <page name="league_results" string="Results">
                            <field name="league_result_ids" >
                                <tree editable="bottom">
                                    <field name="team_id" domain="[('sport_id', '=', parent.sport_id)]"/>
                                    <field name="team_points" />
                                </tree>
                           </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

        <record id="action_sport_league" model="ir.actions.act_window">
            <field name="name">Sport Leagues</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sport.league</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new sport league
                </p>
            </field>
        </record>


</odoo>