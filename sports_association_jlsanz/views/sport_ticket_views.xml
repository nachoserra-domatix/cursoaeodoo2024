<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="sport_ticket_view_tree" model="ir.ui.view">
    <field name="name">sport.ticket.view.tree</field>
    <field name="model">sport.ticket</field>
    <field name="arch" type="xml">
        <tree string="Tickets">
            <field name="name" />
            <field name="partner_id" />
            <field name="match_id" />
        </tree>
    </field>
</record>

    <record id="sport_ticket_view_form" model="ir.ui.view">
        <field name="name">sport.ticket.view.form</field>
        <field name="model">sport.ticket</field>
        <field name="arch" type="xml">
            <form string="Tickets">
            <sheet>
                <group name="name" string="string">
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="match_id" />
                </group>
            </sheet>
            </form>
        </field>
    </record>

    <record id="sport_ticket_action" model="ir.actions.act_window">
        <field name="name">Sport Ticket</field>
        <field name="res_model">sport.ticket</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Create new ticket</p>
        </field>
    </record>

</odoo>
