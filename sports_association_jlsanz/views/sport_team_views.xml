<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="sport_team_view_tree" model="ir.ui.view">
        <field name="name">sport.team.view.tree</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Sports">
                <field name="name" />
                <field name="sport_id" />
                <field name="player_count" />
            </tree>
        </field>
    </record>

    <record id="sport_team_view_form" model="ir.ui.view">
        <field name="name">sport.team.view.form</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <header>
                    <button string="Check All Starter" name="action_checkall_starter" type="object" class="oe_highlight"></button>
                    <button string="Uncheck All Starter" name="action_uncheckall_starter" type="object" class="oe_highlight"></button>
                    <button string="Add Lonely Players" name="action_add_lonely_player" type="object" class="oe_highlight"></button>
                </header>
                <sheet>                    <!-- smart button -->
                    <div class="oe_button_box" name="button_box" >
                        <button type="object" name="action_view_players" class="oe_stat_button" icon="fa-users" >
                            <field string="Players" name="player_count" widget="statinfo" />
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"></field>
                            <field name="sport_id"></field>
                            <field name="player_count" />
                        </group>
                        <group>
                            <field name="logo" widget="image" class="oe_avatar"></field>
                        </group>
                    </group>
                    <notebook>
                        <page name="players" string="Players">
                            <!-- <field name="player_ids" context="{'default_position': 'Delantero'}"> -->
                            <field name="player_ids" context="{'tree_view_ref':'sports_association_jlsanz.sport_player_view_simple_tree', 'form_view_ref':'sports_association_jlsanz.sport_player_view_simple_form'}">
                                <!-- <tree editable="bottom">
                                    <field name="name" />
                                    <field name="age" />
                                    <field name="position" />
                                    <field name="starter" widget="boolean_toggle"/>
                                </tree> -->
                           </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_team_view_kanban" model="ir.ui.view">
        <field name="name">sport_team.view.kanban</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <kanban default_group_by="sport_id" >
                <field name="name"></field>
                <field name="player_count"></field>
                <field name="sport_id"></field>
                <field name="logo" widget="image" class="oe_avatar"></field>
                
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                    </t>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_content flex-grow-1">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                            </div>
                            <div class="o_kanban_record_subtitle">
                                <field name="player_count" string='Payer Count'/>
                            </div>
                            <div>
                                <field name="logo" widget="image" class="oe_avatar"></field>
                            </div>
                            <div class="oe_kanban_footer">

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

<record id="action_sport_team" model="ir.actions.act_window">
    <field name="name">Sport Team</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">sport.team</field>
    <field name="view_mode">tree,form,kanban</field>
    <field name="context">{}</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create a new team
        </p>
    </field>
</record>

</odoo>