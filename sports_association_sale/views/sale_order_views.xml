<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.view.form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <button name="action_cancel" position="before">
                <button string="Create ticket" name="create_sport_ticket" type="object" class="oe_highlight" />
            </button>
            <!-- <xpath expr="//form/header/button" position="inside"> -->
            <xpath expr="//notebook" position="inside">
                <page string="Sport Tickets" name="sale_sport_tickets">
                    <field name="sport_ticket_ids">
                        <tree>
                            <field name="name" />
                            <field name="partner_id" />
                            <field name="game_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
