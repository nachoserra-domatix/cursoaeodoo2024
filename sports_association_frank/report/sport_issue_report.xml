<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_sport_issue">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="mt-4">
                            <span>Issue #</span>
                            <span t-field="o.name"></span>
                        </h2>
                        <div class="row mt-4 mb-2" id="informations">
                            <div t-if="o.user_id" class="col-auto col-3 mw-100 mb-2" name="informations_reference">
                                <strong>Your Reference:</strong><br/>
                                <span class="m-0" t-field="o.user_id"></span>
                            </div>
                        </div>
                        <div t-if="o.player_id" class="col-auto col-3 mw-100 mb-2" name="player">
                            <strong>Player: </strong><br/>
                            <span class="m-0" t-field="o.player_id"></span>
                        </div>
                        <div t-if="o.date" class="col-auto col-3 mw-100 mb-2" name="expiration_date">
                            <strong>Date: </strong><br/>
                            <span class="m-0" t-field="o.date"></span>
                        </div>

                        <table class="table table-sm o_main_table table-borderless mt-4">
                            <thead style="display: table-row-group">
                                <tr>
                                    <th name="th_action" class="text-start">Action</th>
                                    <th name="th_state" class="text-end">State</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="o.action_ids" t-as="line">
                                    <tr>
                                        <td name="td_action" class="text-start">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td name="td_state" class="text-end">
                                            <span t-field="line.state"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
  
    <template id="report_sport_issue_with_dates">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <table class="table table-sm o_main_table table-borderless mt-4">
                        <thead style="display: table-row-group">
                            <tr>
                                <th name="th_name" class="text-start">Name</th>
                                <th name="th_date" class="text-end">Date</th>
                            </tr>
                        </thead>
                        <t t-foreach="docs" t-as="o">
                            <tbody class="sale_tbody">
                                <tr>
                                    <td name="th_name" class="text-start">
                                        <span t-field="o.name"/>
                                    </td>
                                    <td name="th_date" class="text-end">
                                        <span t-field="o.date"/>
                                    </td>
                                </tr>
                            </tbody>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
      
    <record id="action_report_sport_issue" model="ir.actions.report">
    	<field name="name">Issue</field>
    	<field name="model">sport.issue</field>
    	<field name="report_type">qweb-pdf</field>
    	<field name="report_name">sports_association_frank.report_sport_issue</field>
    	<field name="report_file">sports_association_frank.report_sport_issue</field>
    	<field name="print_report_name">(object.name)</field>
    	<field name="binding_model_id" ref="model_sport_issue"/>
        <field name="paperformat_id" ref="sports_association_frank.paperformat_sport"/>
    	<field name="binding_type">report</field>
	</record>

    <record id="action_report_sport_issue" model="ir.actions.report">
    	<field name="name">Report Issues with Date</field>
    	<field name="model">sport.issue</field>
    	<field name="report_type">qweb-pdf</field>
    	<field name="report_name">sports_association_frank.report_sport_issue_with_dates</field>
    	<field name="report_file">sports_association_frank.report_sport_issue_with_dates</field>
    	<field name="print_report_name">(object.name)</field>
    	<field name="binding_model_id" ref="model_sport_issue"/>
        <field name="paperformat_id" ref="sports_association_frank.paperformat_sport"/>
    	<field name="binding_type">report</field>
	</record>

</odoo>