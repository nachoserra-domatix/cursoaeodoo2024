<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sport_clinic_view_tree" model="ir.ui.view">
        <field name="name">sport.clinic.tree</field>
        <field name="model">sport.clinic</field>
        <field name="arch" type="xml">
            <tree string="Sport Clinic">
                <field name="name" />
                <field name="phone" />
                <field name="email" />
            </tree>
        </field>
    </record>
    <record id="sport_clinic_view_form" model="ir.ui.view">
        <field name="name">sport.clinic.form</field>
        <field name="model">sport.clinic</field>
        <field name="arch" type="xml">
            <form string="Sport Clinic">
                <header>
                    <button string="Create Issue" name="%(action_sport_create_issue)d" type="action" class="oe_highlight" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button string="Issues" type="object" name="action_view_issues" class="oe_stat_button" icon="fa-stethoscope">
                            <field name="issue_count" widget="statinfo" string="Issues"/>
                        </button>
                    </div>
                    <h1>
                        <label for="name" />
                        <div class="oe_title">
                            <field name="name"/>
                        </div>                     
                    </h1>
                    <group>
                        <group col="2">
                            <field name="phone" />
                            <field name="email" />
                            <field name="issue_ids" widget="many2many_tags" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sport_clinic_action" model="ir.actions.act_window">
        <field name="name">Sport Clinic</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sport.clinic</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a sport clinic
            </p>
        </field>
    </record>
</odoo>