<?xml version="1.0" encoding="UTF-8"?>
    <odoo>
        <record id="sport_clinic_tree_view" model="ir.ui.view">
            <field name="name">sport.clinic.tree.view</field>
            <field name="model">sport.clinic</field>
            <field name="arch" type="xml">
                <tree string="Sport Clinic" multi_edit='1'>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="available"/>
                </tree>
            </field>
        </record>

        <record id="sport_clinic_form_view" model="ir.ui.view">
            <field name="name">sport.clinic.form.view</field>
            <field name="model">sport.clinic</field>
            <field name="arch" type="xml">
                <form string="Sport clinic">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_check_assistance" type="object" class="oe_stat_button" string="Check all"/>
                            <button name="%(action_sport_create_issue_wizard)d" context="{'default_clinic_id': id}" type="action" class="oe_stat_button" string="Create issue"/>
                            <button class="oe_stat_button" type="object" name="action_view_issues" icon="a-sharp fa-solid fa-notes-medical">
                                <field string="Issues" name="issue_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Clinic name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="available"/>
                                <field name="issue_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="assistance" widget="boolean_toggle"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    </odoo>
