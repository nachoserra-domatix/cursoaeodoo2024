<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sport_create_match_form_view" model="ir.ui.view">
        <field name="name">create.match.view.form</field>
        <field name="model">sport.create.match</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="match_date" />
                    <field name="sport_id" />
                    <field name="leage_id" />
                    <field name="team_ids" />
                </group>
                <footer>
                    <button name="create_match" id="change_state" string="create match" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
            
        </field>
    </record>

    <record id="action_sport_create_match_wizard" model="ir.actions.act_window">
        <field name="name">Create match</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sport.create.match</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sport_association_francisco.model_sport_leage" />
        <field name="binding_view_types">list,form</field>
    </record>

</odoo>
