<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_sport_issue">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="o">
                        <h2>Issue Report</h2>
                        <p>This issue is <span t-field="o.name"/>.</p>
                        <p>The user is <span t-field="o.user_id"/>.</p>
                        <p>The injured player is <span t-field="o.player_id"/>.</p>
                        <p>The date is <span t-field="o.date"/>.</p>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <td>
                                        <span>Action</span>
                                    </td>
                                    <td>
                                        <span>State</span>
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.action_ids" t-as="action">
                                    <td>
                                        <span t-field="action.name"/>
                                    </td>
                                    <td>
                                        <span t-field="action.state" class="ms-3"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <template id="report_sport_issue_summary">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Issue Summary Report</h2>
                    <t t-foreach="docs" t-as="o">
                        <p><span t-field="o.name"/>-<span t-field="o.date"/></p>
                    </t>
                </div>
            </t>
        </t>
    </template>
    <record id="action_report_sport_issue" model="ir.actions.report">
    	<field name="name">Issue</field>
    	<field name="model">sport.issue</field>
    	<field name="report_type">qweb-pdf</field>
    	<field name="report_name">sport_association_francisco.report_sport_issue</field>
    	<field name="report_file">sport_association_francisco.report_sport_issue</field>
    	<field name="print_report_name">'Issue - %s' % (object.name)</field>
    	<field name="binding_model_id" ref="model_sport_issue"/>
    	<field name="paperformat_id" ref="base.paperformat_euro"/>
    	<field name="binding_type">report</field>
	</record>

    <record id="action_report_sport_issue_summary" model="ir.actions.report">
    	<field name="name">Issue Summary</field>
    	<field name="model">sport.issue</field>
    	<field name="report_type">qweb-pdf</field>
    	<field name="report_name">sport_association_francisco.report_sport_issue_summary</field>
    	<field name="report_file">sport_association_francisco.report_sport_issue_summary</field>
    	<field name="print_report_name">'Issue Summary - %s' % (object.name)</field>
    	<field name="binding_model_id" ref="model_sport_issue"/>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    	<field name="binding_type">report</field>
	</record>
    
</odoo>
