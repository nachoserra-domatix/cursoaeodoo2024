<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sport_sport_view_tree" model="ir.ui.view">
        <field name="name">sport.sport.view.tree</field>
        <field name="model">sport.sport</field>
        <field name="arch" type="xml">
            <tree string="sports">
                
                <field name="name"/>
                <field name="description"/>
                
                
            </tree>
        </field>
    </record>

    <record id="sport_sport_view_form" model="ir.ui.view">
        <field name="name">sport.sport.view.form</field>
        <field name="model">sport.sport</field>
        <field name="arch" type="xml">
            <form string="sport">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    
    
    <record id="action_sport_sport" model="ir.actions.act_window">
        <field name="name">Sport sport</field>
        <field name="res_model">sport.sport</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport
            </p>
        </field>
    </record>
    
    

</odoo>