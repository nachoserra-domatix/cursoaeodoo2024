<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sport_team_view_tree" model="ir.ui.view">
        <field name="name">sport.team.view.tree</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <tree string="Teams">
                
                <field name="name"/>
                <field name="player_ids"/>
                <field name="sport_id"/>
                <field name="logo"/>
                
            </tree>
        </field>
    </record>

    <record id="sport_team_view_form" model="ir.ui.view">
        <field name="name">sport.team.view.form</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <header>
                    <button string="Switch starters" name="change_player_status" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="player_ids"/>
                        <field name="sport_id"/>
                        <field name="logo" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    
    
    <record id="action_sport_team" model="ir.actions.act_window">
        <field name="name">Sport Team</field>
        <field name="res_model">sport.team</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new team
            </p>
        </field>
    </record>
    
    

</odoo>