<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sport_match_view_tree" model="ir.ui.view">
        <field name="name">sport_match.view.tree</field>
        <field name="model">sport.match</field>
        <field name="arch" type="xml">
            <tree string="Matches">
                <field name="name"></field>
                <field name="winner_id"></field>
                <field name="match_datetime"></field>
                <field name="sport_id"></field>   
            </tree>
        </field>
    </record>

    <record id="sport_match_view_form" model="ir.ui.view">
        <field name="name">sport_match.view.form</field>
        <field name="model">sport.match</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"></field>
                        <field name="winner_id"></field>
                        <field name="match_datetime"></field> 
                        <field name="sport_id"></field>                      
                    </group>
                </sheet>
                <notebook>
                    <page name="teams" string="Teams">
                        <field name="match_line_ids">
                            <tree editable="bottom">
                                <field name="team_id"></field>
                                <field name="score"></field>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
</odoo>