<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sport_check_issue_done_view_form" model="ir.ui.view">
        <field name="name">sport_check_issue_done.view.form</field>
        <field name="model">sport.check.issue.done</field>
        <field name="arch" type="xml">
            <form string="Check Issue Done">
                <group>
                    <field name="date"/>
                </group>
                <footer>
                    <button string="Check Issue Done" name="check_issue_done" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sport_check_issue_done" model="ir.actions.act_window">
        <field name="name">Check Issue Done</field>
        <field name="res_model">sport.check.issue.done</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sports_association_gabriel.model_sport_issue"/>
        <field name="binding_view_types">list,form</field>
    </record>
</odoo>
