<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sport_create_issue_view_form" model="ir.ui.view">
        <field name="name">sport_create_issue.view.form</field>
        <field name="model">sport.create.issue</field>
        <field name="arch" type="xml">
            <form string="Create Issue">
                <group>
                    <field name="name"/>
                    <field name="clinic_id"/>
                    <field name="player_id"/>
                </group>
                <footer>
                    <button string="Create Issue" name="create_issue" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sport_create_issue" model="ir.actions.act_window">
        <field name="name">Create Issue</field>
        <field name="res_model">sport.create.issue</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sports_association_gabriel.model_sport_clinic"/>
        <field name="binding_view_types">list,form</field>
    </record>
</odoo>
