<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sport_league_view_tree" model="ir.ui.view">
        <field name="name">sport_league.view.tree</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <tree string="Leagues">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="sport_id"/>                
            </tree>
        </field>
    </record>

    <record id="sport_league_view_form" model="ir.ui.view">
        <field name="name">sport_league.view.form</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <form string="League">
                <header>
                    <button string="Calculate Points" name="action_calculate_points" type="object" class="oe_highlight"/>
                    <button string="Create Match" name="%(action_sport_create_match)d" context="{'default_league_id': id}" type="action" class="oe_highlight"/>
                </header>                
                <sheet>
                    <div class="oe_button_box" name="button_box">                        
                        <button name="action_view_matches" type="object" class="oe_stat_button" icon="fa-futbol-o">
                            <field name="num_matches" string="Matches" widget="statinfo"/>
                        </button>                        
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="League Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="sport_id"/>
                    </group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <notebook>
                        <page name="league_lines" string="Classification">
                            <field name="league_line_ids">
                                <tree editable="bottom">
                                    <field name="team_id" domain="[('league_id', '=', parent.id)]"/>
                                    <field name="points"/>
                                </tree>
                            </field>
                        </page>
                        <page name="matches" string="Calendar">
                            <field name="match_ids">
                                <tree editable="bottom">
                                    <field name="match_date"/>
                                    <field name="name"/>
                                    <field name="match_winner"/>                                    
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sport_league" model="ir.actions.act_window">
        <field name="name">Sport Leagues</field>
        <field name="res_model">sport.league</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport league
            </p>
        </field>
    </record>
</odoo>