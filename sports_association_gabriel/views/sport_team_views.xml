<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sport_team_view_tree" model="ir.ui.view">
        <field name="name">sport_team.view.tree</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <tree string="Teams" multi_edit="1">
                <field name="name"/>
                <field name="sport_id"/>
                <field name="league_id"/>
                <field name="player_ids" optional="show" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="sport_team_view_form" model="ir.ui.view">
        <field name="name">sport_team.view.form</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <header>
                    <button string="Check Starter" name="action_check_players_starter" type="object" class="oe_highlight"/>
                    <button string="Uncheck Starter" name="action_uncheck_players_starter" type="object"/>
                    <button string="Add Players" name="action_add_players" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">                        
                        <button name="action_view_players" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="num_players" string="Players" widget="statinfo"/>
                        </button>                        
                    </div>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Team Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sport_id"/>
                            <field name="league_id"/>
                            <field name="num_players"/>
                        </group>
                        <notebook>
                            <page name="Players" string="Players">
                                <!-- <field name="player_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="age"/>
                                        <field name="position"/>
                                        <field name="starter"/>
                                    </tree>
                                </field> -->
                                <field name="player_ids" context="{'tree_view_ref':'sports_association_gabriel.sport_player_simple_view_tree',
                                'form_view_ref':'sports_association_gabriel.sport_player_simple_view_form'}"/>
                            </page>
                        </notebook>                    
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_team_view_kanban" model="ir.ui.view">
        <field name="name">sport_team.view.kanban</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <kanban default_group_by="sport_id">
                <field name="name"/>
                <field name="sport_id"/>
                <field name="logo"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column o_kanban_record_has_image_fill">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="o_kanban_image d-none d-md-block"
                                    t-attf-style="background-image:url('#{kanban_image('sport.team', 'logo', record.id.raw_value)}')">
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="sport_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="sport_team_action" model="ir.actions.act_window">
        <field name="name">Sport Teams</field>
        <field name="res_model">sport.team</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport team
            </p>
        </field>
    </record>
</odoo>
