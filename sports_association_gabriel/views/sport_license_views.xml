<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sport_license_view_tree" model="ir.ui.view">
        <field name="name">sport_license.view.tree</field>
        <field name="model">sport.license</field>
        <field name="arch" type="xml">
            <tree string="Licenses">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <record id="sport_license_view_form" model="ir.ui.view">
        <field name="name">sport_license.view.form</field>
        <field name="model">sport.license</field>
        <field name="arch" type="xml">
            <form string="License">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Player Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>                  
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sport_license" model="ir.actions.act_window">
        <field name="name">Sport Licenses</field>
        <field name="res_model">sport.license</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new license
            </p>
        </field>
    </record>
</odoo>
