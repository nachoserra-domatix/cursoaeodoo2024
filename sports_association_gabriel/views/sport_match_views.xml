<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sport_match_view_tree" model="ir.ui.view">
        <field name="name">sport_match.view.tree</field>
        <field name="model">sport.match</field>
        <field name="arch" type="xml">
            <tree string="Matches">
                <field name="sport_id"/>
                <field name="league_id"/>
                <field name="name"/>
                <field name="match_date"/>
                <field name="match_winner"/>                
            </tree>
        </field>
    </record>

    <record id="sport_match_view_form" model="ir.ui.view">
        <field name="name">sport_match.view.form</field>
        <field name="model">sport.match</field>
        <field name="arch" type="xml">
            <form string="Match">               
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Match"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sport_id" options="{'no_quick_create': True}"/>
                            <field name="league_id"/>
                            <field name="match_date"/>                
                        </group>
                        <group>
                            <field name="points"/>
                            <field name="match_winner"/>
                        </group>
                    </group>                    
                    <notebook>
                        <page name="match_lines" string="Teams and Score">
                            <field name="match_line_ids">
                                <tree editable="bottom">
                                    <field name="team_id" domain="[('league_id', '=', parent.league_id)]"/>
                                    <field name="score"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="sport_match_view_pivot" model="ir.ui.view">
        <field name="name">sport_match.view.pivot</field>
        <field name="model">sport.match</field>
        <field name="arch" type="xml">
            <pivot string="Matches">
                <field name="match_winner" type="row"/>
                <field name="match_date" type="col"/>
                <field name="points" type="measure"/>
            </pivot>
        </field>
    </record>
    
    <record id="sport_match_view_graph" model="ir.ui.view">
        <field name="name">sport_match.view.graph</field>
        <field name="model">sport.match</field>
        <field name="arch" type="xml">
            <graph string="Matches" type="bar">
                <field name="points" type="measure"/>
            </graph>
        </field>
    </record>
    
    <record id="sport_match_view_calendar" model="ir.ui.view">
        <field name="name">sport_match.view.calendar</field>
        <field name="model">sport.match</field>
        <field name="arch" type="xml">
            <calendar string="Matches" date_start="match_date">
                <field name="match_date"/>
                <field name="sport_id"/>
                <field name="match_winner"/>
            </calendar>
        </field>
    </record>

    <record id="action_sport_match" model="ir.actions.act_window">
        <field name="name">Sport Matches</field>
        <field name="res_model">sport.match</field>
        <field name="view_mode">tree,form,pivot,graph,calendar</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport match
            </p>
        </field>
    </record>
</odoo>