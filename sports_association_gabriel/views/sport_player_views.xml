<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sport_player_view_tree" model="ir.ui.view">
        <field name="name">sport_player.view.tree</field>
        <field name="model">sport.player</field>
        <field eval="1" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Players" multi_edit="1">
                <field name="name"/>
                <field name="age"/>
                <field name="position"/>
                <field name="team_id"/>
                <field name="starter"/>
            </tree>
        </field>
    </record>

    <record id="sport_player_simple_view_tree" model="ir.ui.view">
        <field name="name">sport_player.simple.view.tree</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <tree string="Players" multi_edit="1">
                <field name="name"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <record id="sport_player_view_form" model="ir.ui.view">
        <field name="name">sport_player.view.form</field>
        <field name="model">sport.player</field>
        <field eval="1" name="priority"/>
        <field name="arch" type="xml">
            <form string="Player">
                <header>
                    <button string="Create Issue" name="%(action_sport_create_issue)d" type="action" class="oe_highlight" context="{'default_player_id': id}"/>
                </header>
                <sheet>
                    <field name="active" invisible="True"/>
                    <field name="photo" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Player Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="birthdate"/>
                            <field name="age"/>
                            <field name="position"/>
                        </group>
                        <group>
                            <field name="street"/>
                            <field name="city"/>
                            <field name="country_id"/>
                        </group>  
                        <group>
                            <field name="team_id"/>
                            <field name="sport_name"/>
                            <field name="starter"/>
                        </group>                  
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_player_simple_view_form" model="ir.ui.view">
        <field name="name">sport_player.simple.view.form</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <form string="Player">
                <sheet>
                    <field name="name" placeholder="Player Name"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_player_view_search" model="ir.ui.view">
        <field name="name">sport_player.view.search</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <search string="Players">
                <field name="name" filter_domain="[('name','ilike',self)]"/>
                <field name="team_id"/>
                <field name="sport_name" filter_domain="[('sport_name','ilike',self)]"/>
                <filter string="Starters" name="starters" domain="[('starter','=','True')]"/>
                <filter string="Non Starters" name="non_starters" domain="[('starter','!=','True')]"/>
                <filter string="Team" name="team" context="{'group_by': 'team_id'}"/>
                <filter string="Sport" name="sport" context="{'group_by': 'sport_name'}"/>
                <filter string="Age" name="age" context="{'group_by': 'age'}"/>
            </search>
        </field>
    </record>

    <record id="sport_player_action" model="ir.actions.act_window">
        <field name="name">Sport Players</field>
        <field name="res_model">sport.player</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport player
            </p>
        </field>
    </record>
</odoo>
