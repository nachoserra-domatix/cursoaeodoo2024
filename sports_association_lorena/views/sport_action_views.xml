<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="actions_view_tree" model="ir.ui.view">
        <field name="name">sport.action.view.tree</field>
        <field name="model">sport.action</field>
        <field name="arch" type="xml">
            <tree string="Actions">
                <field name="name"/>
                <field name="state"/>
                <field name="issue_id"/>
            </tree>
        </field>
    </record>

    <record id="action_sport_action" model="ir.actions.act_window">
        <field name="name">Actions</field>
        <field name="res_model">sport.action</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>