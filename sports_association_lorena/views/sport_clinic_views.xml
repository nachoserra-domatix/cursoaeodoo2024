<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sport_clinic_view_tree" model="ir.ui.view">
        <field name="name">sport_clinic.view.tree</field>
        <field name="model">sport.clinic</field>
        <field name="arch" type="xml">
            <tree string="Clinics">
                <field name="name"/>
                <field name="available"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="sport_clinic_view_form" model="ir.ui.view">
        <field name="name">sport_clinic.view.form</field>
        <field name="model">sport.clinic</field>
        <field name="arch" type="xml">
            <form string="Clinic">
                <header>
                    <button string="Check Assistance" name="action_check_assistance" type="object" class="oe_highlight"/>
                    <button string="Create issue" name="%(action_sport_create_issue)d" type="action" class="oe_highlight"/>
                </header>
                <sheet>
                    <!-- smart button for issues -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_issues" type="object" class="oe_stat_button" icon="fa-tasks">
                            <field name="issues_count" string="Issues" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="available" widget="boolean_toggle"/>
                        <field name="phone"/>
                        <field name="email"/>
                    </group>
                    <notebook>
                        <page name="issues" string="Issues">
                            <field name="issue_ids">
                                <tree string="Clinics">
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="assistance" widget="boolean_totle"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sport_clinic" model="ir.actions.act_window">
        <field name="name">Sport Clinic</field>
        <field name="res_model">sport.clinic</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>