<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sport_team_view_tree" model="ir.ui.view">
        <field name="name">sport_team.view.tree</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <tree string="Teams">
                <field name="name"/>
                <field name="logo"/>
                <field name="player_ids" widget="many2many_tags"/>
                <field name="sport_id"/>
                <button string="Headline" name="mark_headline" type="object" class="oe_highlight" />
                <button string="Desmark Headline" name="desmark_headline" type="object" class="oe_highlight" />
            </tree>
        </field>
    </record>

    <record id="sport_team_view_form" model="ir.ui.view">
        <field name="name">sport_team.view.form</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <form string="Teams">
                <header>
                    <button string="Headline" name="mark_headline" type="object" class="oe_highlight" />
                    <button string="Desmark Headline" name="desmark_headline" type="object" class="oe_highlight" />
                    <button string="Add free players" name="action_add_players" type="object" class="btn-warning" />
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sport_id"/>
                        <field name="logo"/>
                        <field name="player_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_team_view_kanban" model="ir.ui.view">
        <field name="name">sport.team.view.kanban</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name" />
                <field name="sport_id" />
                <field name="color" />
                <field name="logo" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="sport_id" />
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="logo" widget="image" size="128"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_sport_team" model="ir.actions.act_window">
        <field name="name">Sport Team</field>
        <field name="res_model">sport.team</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>