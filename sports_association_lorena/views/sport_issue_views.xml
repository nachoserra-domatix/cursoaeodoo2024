<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sport_issue_view_tree" model="ir.ui.view">
        <field name="name">sport_issue.view.tree</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Issues">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="date" optional="show"/>
                <field name="user_id" optional="hide"/>
                <field name="state"/>
                <field name="actions_ids"/>
                <field name="clinic_id" domain="[('available', '=', True)]"/>
            </tree>
        </field>
    </record>

    <record id="sport_issue_view_form" model="ir.ui.view">
        <field name="name">sport_issue.view.form</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <form string="Issues">
                <header>
                    <field options="{'clickable':1}" name="state" widget='statusbar'/>
                    <button string="Add Tag" name="action_add_tag" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Issues name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" options="{'no_quick_create': True}"/>
                            <field name="tag_ids" options="{'no_create': True}"/>
                            <field name="clinic_id" domain="[('available', '=', True)]"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="assistance"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description"/>
                        </page>
                        <page name="actions" string="Actions to do">
                            <field name="actions_ids"/>
                        </page>
                        <page name="solution" string="Solution">
                            <field name="solution"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_issue_view_search" model="ir.ui.view">
        <field name="name">sport_issue.view.search</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <search string="Issues">
                <field name="name" filter_domain="['|',('name','ilike',self), ('description','ilike',self)]"/>
                <field name="clinic_id"/>
                <field name="tag_ids"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]" />
                <filter name="open" string="Open" domain="[('state', '=', 'open')]" />
                <filter name="User" string="User" context="{'group_by': 'user_id'}" />
            </search>
        </field>
    </record>

    <record id="sport_issue_view_kanban" model="ir.ui.view">
        <field name="name">sport_issue.view.kanban</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name" />
                <field name="user_id" />
                <field name="clinic_id" />
                <field name="date" />
                <field name="tag_ids" />
                <field name="state" />
                <field name="color" />
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="date" />
                                </div>
                                <div>
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="clinic_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="sport_issue_view_pivot" model="ir.ui.view">
        <field name="name">sport_issue.view.pivot</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <pivot string="Issues">
                <field name="user_id" type="row" />
                <field name="date" type="col" />
                <field name="cost" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="sport_issue_view_graph" model="ir.ui.view">
        <field name="name">sport_issue.view.graph</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <graph string="Issues">
                <field name="user_id" />
                <field name="cost"/>
            </graph>
        </field>
    </record>

    <record id="sport_issue_view_calendar" model="ir.ui.view">
        <field name="name">sport_issue.view.calendar</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <calendar string="Issues" date_start="date">
                <field name="name" />
            </calendar>
        </field>
    </record>
</odoo>