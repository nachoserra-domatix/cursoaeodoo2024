<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_sport_player" model="ir.actions.act_window">
        <field name="name">Players</field>
        <field name="res_model">sport.player</field>
        <field name="view_mode">tree,form,kanban</field>
        <!-- <field name="domain">[]</field> -->
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport player
            </p>
        </field>   
    </record>
    
    <record id="sport_player_view_tree" model="ir.ui.view">
        <field name="name">sport.player.view.tree</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Players">
                <field name="name" />
                <field name="age"/>
                <field name="position" />
                <field name="team_id" />
                <field name="titular" />
                <field name="birth_date" />
            </tree>
        </field>
    </record>

    <record id="sport_player_view_tree_simple" model="ir.ui.view">
        <field name="name">sport.player.view.tree.simple</field>
        <field name="model">sport.player</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <tree string="Players">
                <field name="name" />
                <field name="age"/>
            </tree>
        </field>
    </record>

    <record id="sport_player_view_form_simple" model="ir.ui.view">
        <field name="name">sport_player.view.form.simple</field>
        <field name="model">sport.player</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="Player">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="age"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sport_player_view_form" model="ir.ui.view">
        <field name="name">sport_player.view.form</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <form string="Player">
                <header>
                    <button string="Add to Titular" name="add_titular" type="object" class="oe_highlight" invisible="titular == True"/>
                    <button string="Remove from Titular" name="remove_titular" type="object" class="oe_highlight" invisible="titular == False"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="age"/>
                        <field name="position" />
                        <field name="team_id" />
                        <field name="titular" />
                        <field name="birth_date" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>