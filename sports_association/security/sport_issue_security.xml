<odoo>

    <record id="ir_module_sport_association" model="ir.module.category">
        <field name="name">Sports association</field>
    </record>

    <record id="res_groups_sport_association_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="ir_module_sport_association"/>
        <field name="comment">
            The user will be able to browse some model.
        </field>
    </record>

    <record id="res_groups_sport_association_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="ir_module_sport_association"/>
        <field name="implied_ids" eval="[(4, ref('res_groups_sport_association_user'))]"/>
        <field name="comment">
            The user will be able to manage some model.
        </field>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <record id="sport_association_personal_rule" model="ir.rule">
        <field name="name">Personal Issues</field>
        <field name="model_id" ref="model_sport_issue"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('res_groups_sport_association_user'))]"/>
    </record>

    <record id="sport_association_rule_see_all" model="ir.rule">
        <field name="name">All Issues</field>
        <field name="model_id" ref="model_sport_issue"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('res_groups_sport_association_manager'))]"/>
    </record>

</odoo>