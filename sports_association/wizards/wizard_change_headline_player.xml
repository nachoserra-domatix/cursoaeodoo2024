<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="wizard_change_headline_player" model="ir.ui.view">
        <field name="name">wizard.change.headline.player</field>
        <field name="model">wizard.change.headline.player</field>
        <field name="arch" type="xml">
            <form>
                <group>
                   <field name="player_ids">
                    <tree editable="1" save="1" create="0" delete="0">
                        <field name="name" readonly="1"/>
                        <field name="headline"/>
                    </tree>
                   </field>
                </group>
                <footer>
                    <button special="save" string="Save" class="btn-primary"/>
                    <button string="Back" special="cancel" class="btn-secundary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>