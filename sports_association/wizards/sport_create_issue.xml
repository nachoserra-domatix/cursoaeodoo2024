<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sport_create_issue_form" model="ir.ui.view">
        <field name="name">sport_create_issue.view.form</field>
        <field name="model">sport.create.issue</field>
        <field name="arch" type="xml">
            <form string="Issues">
                <group>
                    <field name="name" />
                    <field name="clinic_id"/>
                    <field name="player_id"/>
                </group>
                <footer>
                        <button string="Create and View Issue" name="create_issue" class="btn-primary" type="object"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sport_create_issue" model="ir.actions.act_window">
        <field name="name">Create issue</field>
        <field name="res_model">sport.create.issue</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sports_association.model_sport_clinic" />  <!-- referencia xml se hace asÃ­ -->
        <field name="binding_model_id" ref="sports_association.model_sport_player" />
        <field name="binding_view_types">list,form</field>
    </record>

</odoo>