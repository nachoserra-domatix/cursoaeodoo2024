<?xml version="1.0" encoding="utf-8" ?>
<odoo>


    <record id="sport_create_issue_view" model="ir.ui.view">
        <field name="name">Create Sport Issue Wizard</field>
        <field name="model">sport.create.issue</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Create Issue">
                <group>
                    <field name="name" />
                    <field name="clinic_id" />
                    <field name="player_id" />
                </group>
                <footer>
                    <button
                        name="create_issue"
                        string="Create Issue"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" special="cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>

    <record id="sport_create_issue_action" model="ir.actions.act_window">
        <field name="name">Create Issue</field>
        <field name="res_model">sport.create.issue</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_sport_clinic" />
        <field name="binding_view_types">list,form</field>
    </record>


</odoo>
