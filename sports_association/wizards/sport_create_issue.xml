<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- sport.create.issue form view -->
    <record id="sport_create_issue_view_form" model="ir.ui.view">
        <field name="name">sport.create.issue.view.form</field>
        <field name="model">sport.create.issue</field>
        <field name="arch" type="xml">
            <form string="Create Issue">
                <group>
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="clinic_id"/>
                    <field name="player_id"/>
                </group>
                <footer>
                    <button string="Create issue" name="create_issue" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- sport.create.issue action window -->
    <record id="sport_create_issue_action" model="ir.actions.act_window">
        <field name="name">Create Issue</field>
        <field name="res_model">sport.create.issue</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="sports_association.model_sport_clinic" />
        <field name="binding_view_types">list,form</field>
    </record>
</odoo>