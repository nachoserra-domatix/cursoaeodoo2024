<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- sport.create.league_match form view -->
    <record id="sport_create_league_match_view_form" model="ir.ui.view">
        <field name="name">sport.create.league.match.view.form</field>
        <field name="model">sport.create.league.match</field>
        <field name="arch" type="xml">
            <form string="Create league match">
                <group>
                    <!-- Add your fields here -->
                    <field name="league_id"/>
                    <field name="sport_id"/>
                    <field name="date_and_time"/>
                    <field name="team_ids" widget="many2many_tags" />
                </group>
                <footer>
                    <button string="Create league match" name="create_league_match" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- sport.create.league_match action window -->
    <record id="sport_create_league_match_action" model="ir.actions.act_window">
        <field name="name">Create league match</field>
        <field name="res_model">sport.create.league.match</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sports_association.model_sport_league" />
        <field name="binding_view_types">list,form</field>
    </record>
</odoo>