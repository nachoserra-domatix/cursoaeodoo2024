<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sport_issues_done" model="ir.ui.view">
        <field name="name">sport.issues.done</field>
        <field name="model">sport.issues.done</field>
        <field name="arch" type="xml">
            <form string="Set Issues Done">
                <group>
                    <field name="date"></field>
                </group>
                <footer>
                    <button string="Set To Done" name="set_done" class="btn-primary" type="object"></button>
                    <button string="Cancel" class="btn-secondary" special="cancel"></button>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sport_issues_done" model="ir.actions.act_window">
        <field name="name">Set to Done</field>
        <field name="res_model">sport.issues.done</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sports_association.model_sport_issue"></field>
        <field name="binding_view_types">list,form</field>
    </record>
</odoo>