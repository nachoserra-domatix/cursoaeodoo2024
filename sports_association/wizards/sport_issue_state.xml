<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sport_issue_state_form" model="ir.ui.view">
        <field name="name">sport_issue_state.view.form</field>
        <field name="model">sport.issue.state</field>
        <field name="arch" type="xml">
            <form string="Set state to done">
                <group>
                    <field name="date" />
                </group>
                <footer>
                        <button string="Set to done" name="set_done" class="btn-primary" type="object"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sport_issue_state" model="ir.actions.act_window">
        <field name="name">Set State to Done</field>
        <field name="res_model">sport.issue.state</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sports_association.model_sport_issue" />  <!-- referencia xml se hace asÃ­ -->
        <field name="binding_view_types">list,form</field>
    </record>
</odoo>