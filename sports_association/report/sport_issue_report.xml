<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="report_sport_issue">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="mt-4">
                            <span>Issue #</span>
                            <span t-field="o.name"></span>
                        </h2>
                        <div class="row mt-4 mb-2" id="info">
                            <div t-if="o.user_id" class="col-auto col-3 mw-100 mb-2"
                                name="user">
                                <strong>User: </strong>
                                <br />
                                <span class="m-0" t-field="o.user_id"></span>
                            </div>
                            <div t-if="o.date" class="col-auto col-3 mw-100 mb-2" name="date">
                                <strong>Date: </strong>
                                <br />
                                <span class="m-0" t-field="o.date"></span>
                            </div>
                            <div t-if="o.player_id" class="col-auto col-3 mw-100 mb-2" name="player">
                                <strong>Player: </strong>
                                <br />
                                <span class="m-0" t-field="o.player_id"></span>
                            </div>
                        </div>
                        <table class="table table-sm o_main_table table-borderless mt-4">
                            <thead style="display: table-row-group">
                                <tr>
                                    <th name="th_action" class="text-start">Action</th>
                                    <th name="th_state" class="text-end">State</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="o.actions_ids" t-as="line">
                                    <tr>
                                        <td name="td_action" class="text-start">
                                            <span t-field="line.name" />
                                        </td>
                                        <td name="td_state" class="text-end">
                                            <span t-field="line.state" />
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_sport_issue_list">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <table class="table table-sm o_main_table table-borderless mt-1">
                        <thead style="display: table-row-group">
                            <tr>
                                <th name="th_action" class="text-start">Name</th>
                                <th name="th_state" class="text-start">Date</th>
                                <th name="th_state" class="text-end">Player</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-foreach="docs" t-as="o">
                                <tr>
                                    <td name="td_action" class="text-start">
                                        <span t-field="o.name" />
                                    </td>
                                    <td name="td_state" class="text-start">
                                        <span t-field="o.date" />
                                    </td>
                                    <td name="td_player" class="text-end">
                                        <span t-field="o.player_id" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>

        </t>
    </template>

    <record id="paperformat_sport_association" model="report.paperformat">
        <field name="name">Sport Report Paperformat</field>
        <field name="format">custom</field>
        <field name="orientation">Portrait</field>
        <field name="default" eval="False" />
        <field name="dpi">90</field>
        <field name="margin_top">3</field>
        <field name="margin_right">3</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">4</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">25</field>
        <field name="page_width">150</field>
        <field name="page_height">180</field>
    </record>

    <record id="action_report_sport_issue" model="ir.actions.report">
        <field name="name">Sport Issue</field>
        <field name="model">sport.issue</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sports_association.report_sport_issue</field>
        <field name="report_file">sports_association.report_sport_issue</field>
        <field name="print_report_name">(object.name)</field>
        <field name="paperformat_id" ref="sports_association.paperformat_sport_association" />
        <field name="binding_model_id" ref="model_sport_issue" />
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_sport_issue_list" model="ir.actions.report">
        <field name="name">Sport Issue List</field>
        <field name="model">sport.issue</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sports_association.report_sport_issue_list</field>
        <field name="report_file">sports_association.report_sport_issue_list</field>
        <field name="print_report_name">Issue_List</field>
        <field name="binding_model_id" ref="model_sport_issue" />
        <field name="binding_type">report</field>
    </record>
</odoo>