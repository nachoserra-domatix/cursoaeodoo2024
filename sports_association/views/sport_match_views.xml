<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- sport.match tree view -->
    <record id="sport_match_view_tree" model="ir.ui.view">
        <field name="name">sport.match.view.tree</field>
        <field name="model">sport.match</field>
        <field name="arch" type="xml">
            <tree string="Matches">
                <!-- Add your fields here -->
                <field name="league_id" optional="show" />
                <field name="winner_team_id" optional="show" />
                <field name="score_winning" optional="show" />
                <field name="date_and_time" optional="show" />
            </tree>
        </field>
    </record>

    <!-- sport.match form view -->
    <record id="sport_match_view_form" model="ir.ui.view">
        <field name="name">sport.match.view.form</field>
        <field name="model">sport.match</field>
        <field name="arch" type="xml">
            <form string="Matches">
                <header>
                    <button string="Set Score" name="set_score" type="object" class="oe_hightlight"/>
                    <button string="Create match" name="%(sport_create_league_match_action)d" type="action" class="oe_hightlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <!-- Add your fields here -->
                            <field name="league_id" />
                            <field name="winner_team_id" />
                            <field name="date_and_time" />
                        </group>
                        <group>
                            <!-- Add your fields here -->
                            <field name="score_winning" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Teams" name="teams">
                            <field name="match_line_ids">
                                <tree editable="bottom">
                                    <!-- Add your fields here -->
                                    <field name="team_id" />
                                    <field name="points"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- sport.match pivot view -->
    <record id="sport_match_view_pivot" model="ir.ui.view">
        <field name="name">sport.match.view.pivot</field>
        <field name="model">sport.match</field>
        <field name="arch" type="xml">
            <pivot string="Matches">
                <!-- Add your fields here -->
                <field name="winner_team_id" type="row"/>
                <field name="date_and_time" type="col"/>
                <field name="score_winning" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- sport.match graph view -->
    <record id="sport_match_view_graph" model="ir.ui.view">
        <field name="name">sport.match.view.graph</field>
        <field name="model">sport.match</field>
        <field name="arch" type="xml">
            <graph string="Matches">
                <!-- Add your fields here -->
                <field name="winner_team_id"/>
                <field name="score_winning" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- sport.match calendar view -->
    <record id="sport_match_view_calendar" model="ir.ui.view">
        <field name="name">sport.match.view.calendar</field>
        <field name="model">sport.match</field>
        <field name="arch" type="xml">
            <calendar string="Matches" date_start="date_and_time" >
                <!-- Add your fields here -->
                <field name="winner_team_id"/>
            </calendar>
        </field>
    </record>

    <!-- sport.match action window -->
    <record id="sport_match_action" model="ir.actions.act_window">
        <field name="name">Matches</field>
        <field name="res_model">sport.match</field>
        <field name="view_mode">tree,form,pivot,graph,calendar</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Create new match</p>
        </field>
    </record>
</odoo>