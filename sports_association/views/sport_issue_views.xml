<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_sport_issue" model="ir.actions.act_window">
        <field name="name">Sport Issue</field>
        <field name="res_model">sport.issue</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new issue
            </p>
        </field>
    </record>

    <record id="sport_issue_tree_view" model="ir.ui.view">
        <field name="name">sport.issue.tree.view</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <tree string="Sport Issue" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="user_id" string="User" optional="hide"/>
                <field name="date" optional="show"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

     <record id="sport_issue__form_view" model="ir.ui.view">
        <field name="name">sport.issue.form.view</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <form string="Sport Issue">
                <sheet>
                    <header>                                        
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,done" options="{'clickable': '1'}"/>
                    </header>
                    <label for="name" string="Issue"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Issue Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>                        
                            <field name="user_id"/>
                            <field name="date"/>                        
                        </group>
                        <group name="group_product">
                            <field name="assistance" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Solution" name="solution">
                            <field name="solution"/>
                        </page>
                    </notebook>                
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menus -->
    <menuitem id="sport_menu"
        name="Sport Association"
        sequence="10"
        web_icon="calendar,static/description/icon.png"
        groups="base.group_user">

        <menuitem id="sport_issue_menu"
            name="Sport Issue"
            sequence="1"
            action="action_sport_issue"            
            groups="base.group_user"/>
    
    </menuitem>

</odoo>