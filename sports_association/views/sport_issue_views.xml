<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- VIEWS -->
    
    <record id="sport_issue_tree_view" model="ir.ui.view">
        <field name="name">sport.issue.tree.view</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <tree string="Sport Issue" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="user_id" string="User" optional="show" options="{'no_open': True, 'no_quick_create':True}"/>
                <field name="clinic_id" string="Clinic" optional="show" domain="[('available','=',True)]"/>
                <field name="date" optional="show"  widget="date"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="sport_issue__form_view" model="ir.ui.view">
        <field name="name">sport.issue.form.view</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <form string="Sport Issue">
                <sheet>
                    <header>                                        
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,done" options="{'clickable': '1'}"/>
                        <button string="Draft"  invisible="state == 'draft'" class="btn-primary" name="action_draft" type="object" />
                        <button string="Open" invisible="state == 'open'" name="action_open" type="object" class="btn-primary" />
                        <button string="Close" invisible="state == 'close'" name="action_close" type="object" class="btn-secundary" />
                        <button string="Add Tag" name="action_add_tag" type="object" class="btn-primary"/>
                    </header>
                    <label for="name" string="Issue"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Issue Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>                        
                            <field name="assigned"/>
                            <field name="user_id"/>
                            <field name="date"/>
                            <field name="cost"/>                        
                        </group>
                        <group name="group_product">
                            <field name="assistance" widget="boolean_toggle"/>
                            <field name="clinic_id" domain="[('available','=',True)]" />
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page name="actions" string="Actions to do">
                            <field name="action_ids" context="{'default_state': state}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Solution" name="solution">
                            <field name="solution"/>
                        </page>
                    </notebook>                
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_issue_calendar_view" model="ir.ui.view">
        <field name="name">sport.issue.calendar</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <calendar
                date_start="date"                
                string="Issues"
                mode="month"
                scales="week,month,year"
                event_open_popup="true"
                quick_create="0"
                color="user_id">
                <field name="name"/>
                <field name="user_id" widget="many2one_avatar_user" invisible="not user_id"/>                
                <field name="tag_ids" widget="many2many_tags" invisible="not tag_ids"/>
                <field name="state" filters="1" invisible="1"/>
            </calendar>
        </field>
    </record>

    <record id="sport_issue_view_kanban" model="ir.ui.view">
        <field name="name">sport.issue.kanban</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile" sample="1" quick_create="false">
                <field name="name"/>
                <field name="user_id"/>
                <field name="clinic_id"/>
                <field name="date"/>
                <field name="state"/>                
                <progressbar field="state"
                    colors='{"draft": "info", "open": "warning", "expired": "danger", "done": "success"}'/>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row">
                                <div class="">
                                    <div><strong><field name="name"/></strong></div>
                                    <field name="user_id"/>
                                    <div><field name="clinic_id"/></div>
                                </div>                                
                            </div>                                                       
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="sport_issue_search_view" model="ir.ui.view">
        <field name="name">sport.issue.search</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <search string="Search Issue">
                <field name="name" filter_domain="['|', ('description', 'ilike', self), ('name', 'ilike', self)]"/>
                <field name="user_id"/>
                <field name="clinic_id"/>
                <separator/>
                <filter name="state" string="Open" domain="[('state','=','open')]" help="Show open issues"/>
                <filter name="state" string="Close" domain="[('state','=','close')]" help="Show close issues"/>
                <group string="Group By">
                    <filter string="User" name="user_id" domain="[]" context="{'group_by':'user_id'}"/>
                    <filter string="Clinic" name="clinic_id" domain="[]" context="{'group_by':'clinic_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="sport_issue_graph_view" model="ir.ui.view">
        <field name="name">sport.issue.graph</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <graph string="Issues" sample="1">
                <field name="name"/>
                <field name="cost" />
            </graph>            
        </field>
    </record>

    <record id="sport_issue_pivot_view" model="ir.ui.view">
        <field name="name">sport.issue.pivot</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <pivot string="Timesheet">
                <field name="user_id" type="row"/>
                <field name="date" interval="month" type="col"/>
                <field name="cost" type="measure" />
            </pivot>            
        </field>
    </record>

    <!-- ACTIONS (WINDOW) -->

    <record id="action_sport_issue" model="ir.actions.act_window">
        <field name="name">Sport Issue</field>
        <field name="res_model">sport.issue</field>
        <field name="view_mode">tree,form,kanban,calendar,graph,pivot</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new issue
            </p>
        </field>
    </record>
</odoo>