<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- sport.issue tree view -->
    <record id="sport_issue_view_tree" model="ir.ui.view">
        <field name="name">sport.issue.view.tree</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">
                <field name="sequence" widget="handle" />
                <field name="name"/>
                <field name="date" optional="show" />
                <field name="user_id" optional="hide" />
                <field name="state" widget="badge" 
                    decoration-muted="state == 'draft'"
                    decoration-warning="state == 'open'"
                    decoration-success="state == 'done'"
                    />
            </tree>
        </field>
    </record>

    <!-- sport.issue form view -->
    <record id="sport_issue_view_form" model="ir.ui.view">
        <field name="name">Sport Issues</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <form string="Sport Issues">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}" statusbar_visible="draft,open,done" />
                    <button string="Draft" invisible="state not in ('open','done')" name="action_draft" type="object" class="oe_highlight" />
                    <button string="Open" invisible="state not in ('draft')" name="action_open" type="object" class="oe_highlight" />
                    <button string="Done" invisible="state not in ('done')" name="action_done" type="object" class="oe_highlight" />
                    <button string="Add Tag" name="action_add_tag" groups="sports_association.res_groups_sports_association_manager" type="object" class="btn-primary" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Issue Name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="player_id" context="{'search_default_filter_no_share':1}"/>
                            <field name="assigned"/>
                            <field name="user_id" context="{'search_default_filter_no_share':1}"/>
                            <field name="user_phone"/>
                            <field name="clinic_id" domain="[('available', '=', 'True')]"/>
                            <field name="cost"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="assistance" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page name="actions" string="Actions">
                            <field name="action_ids" context="{'default_state':state}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Solution" name="solution">
                            <field name="solution"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- sport.issue search view -->
    <record id="sport_issue_view_search" model="ir.ui.view">
        <field name="name">sport.issue.view.search</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <search string="Issues">
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="user_id"/>
                <field name="clinic_id"/>
                <field name="tag_ids"/>
                <filter string='Name' name='name' domain="[('state', '=', 'name')]"/>
                <filter string='Description' name='description' domain="[('state', '=', 'description')]"/>
                <filter string='Draft' name='draft' domain="[('state', '=', 'draft')]"/>
                <filter string='Open' name='open' domain="[('state', '=', 'open')]"/>
                <filter string="User" name="user" context="{'group_by':'user_id'}"/>
                <filter string="Date" name="date" context="{'group_by':'date'}"/>
            </search>
        </field>
    </record>

    <!-- sport.issue kanban view -->
    <record id="sport_issue_view_kanban" model="ir.ui.view">
        <field name="name">sport.issue.view.kanban</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="user_id"/>
                <field name="clinic_id"/>
                <field name="tag_ids"/>
                <field name="date"/>
                <field name="color"/>

                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="date"/>
                                </div>
                                <div>
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="clinic_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                    
                </templates>
            </kanban>
        </field>
    </record>

    <!-- sport.issue pivot view -->
    <record id="sport_issue_view_pivot" model="ir.ui.view">
        <field name="name">sport.issue.view.pivot</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <pivot string="Issues">
                <!-- Add your fields here -->
                <field name="user_id" type="row"/>
                <field name="date" type="col"/>
                <field name="cost" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- sport.issue graph view -->
    <record id="sport_issue_view_graph" model="ir.ui.view">
        <field name="name">sport.issue.view.graph</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <graph string="Issues">
                <!-- Add your fields here -->
                <field name="user_id"/>
                <field name="cost" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- sport.issue calendar view -->
    <record id="sport_issue_view_calendar" model="ir.ui.view">
        <field name="name">sport.issue.view.calendar</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <calendar string="Issues" date_start="date" color="user_id">
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="user_id"/>
                <field name="state" filters="1" invisible="1"/>
            </calendar>
        </field>
    </record>

    <record id="action_sport_issue" model="ir.actions.act_window">
        <field name="name">Sport Issues</field>
        <field name="res_model">sport.issue</field>
        <field name="view_mode">tree,form,kanban,pivot,graph,calendar</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a new sport issue
            </p>
        </field>
    </record>

</odoo>