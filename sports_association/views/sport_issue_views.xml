<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sport_issue_tree_view" model="ir.ui.view">
        <field name="name">Sport Issue Tree View</field>
        <field name="model">sport.issue</field>
        <field name="type">tree</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <tree string="Issues">
                <field name="secuence" widget="handle" />
                <field name="name" />
                <field name="date" optional="show" />
                <field name="user_id" optional="hide" />
                <field name="state" widget="badge" />
                <field name="assistance" />
            </tree>
        </field>
    </record>

    <record id="sport_issue_view_form" model="ir.ui.view">
        <field name="name">sport_issue.view.form</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <form string="Issues">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,done" />

                    <button name="action_open" string="Open" type="object" class="oe_highlight"
                        invisible="state not in ('draft')"
                    />
                    <button name="action_done" string="Done" type="object" class="oe_secondary"
                        invisible="state in ('done')" />
                    <button name="action_draft" string="Draft" type="object" class="oe_danger"
                        invisible="state in ('draft')" />
                    <button name="action_tags" string="Set Tags" type="object" class="oe_primary" />

                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Issue Name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" />
                            <field name="assigned" />
                            <field name="clinic_id" />
                            <field name="cost" />
                        </group>
                        <group>
                            <field name="date" />
                            <field name="assistance" />
                            <field name="tag_ids"
                                widget="many2many_tags" options="{'color_field': 'color'}"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description" />
                        </page>
                        <page name="solution" string="Solution">
                            <field name="solution" />
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_issue_view_search" model="ir.ui.view">
        <field name="name">sport_issue.view.search</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <search string="Issues">
                <field name="name"
                    filter_domain="['|',('name', 'ilike', self), ('description', 'ilike', self)]" />
                <field name="user_id" />
                <field name="clinic_id" />
                <field name="tag_ids" />
                <filter
                    string="Draft" name="draft" domain="[('state', '=', 'draft')]" />
                <filter
                    string="Open" name="open" domain="[('state', '=', 'open')]" />
                <filter
                    string="User" name="user" context="{'group_by': 'user_id'}" />
                <filter
                    string="Date" name="date" context="{'group_by': 'date'}" />
            </search>
        </field>
    </record>

    <record id="sport_issue_view_kanban" model="ir.ui.view">
        <field name="name">sport_issue.view.kanban</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name" />
                <field name="user_id" />
                <field name="clinic_id" />
                <field name="state" />
                <field name="date" />
                <field name="tag_ids" />
                <field name="color" />
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable">
                            <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                        </t>
                        <t t-if="widget.editable">
                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                        </t>
                        <ul class="oe_kanban_colorpicker" data-field="color" />
                    </t>
                    <t t-name="kanban-box">
                        <div
                            t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name" />
                                    </strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="cost" widget="monetary"
                                        options="{'currency_field': 'company_currency'}" />
                                </div>
                                <div>
                                    <field name="date" />
                                </div>
                                <div>
                                    <field name="tag_ids" widget="many2many_tags"
                                        options="{'color_field': 'color'}" />
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="clinic_id" />
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>


    <record id="sport_issue_view_pivot" model="ir.ui.view">
        <field name="name">sport_issue.view_pivot</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <pivot string="Issues">
                <field type="row" name="user_id" />
                <field type="col" name="date" interval="month" />
                <field type="measure" name="cost" />
            </pivot>

        </field>
    </record>

    <record id="sport_issue_view_graph" model="ir.ui.view">
        <field name="name">sport_issue.view.graph</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <graph string="Issues" sample="1">
                <field name="user_id" />
                <field name="cost" />
            </graph>
        </field>
    </record>

    <record id="sport_issue_view_calendar" model="ir.ui.view">
        <field name="name">sport_issue.view.calendar</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <calendar string="Issues" date_start="date" color="user_id">
                <field name="name" />
                <field name="user_id" />
                <field name="name" filters="1" invisible="1" />
            </calendar>
        </field>
    </record>


</odoo>