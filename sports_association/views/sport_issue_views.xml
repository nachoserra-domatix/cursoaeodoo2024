<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- VIEWS -->
    
    <record id="sport_issue_tree_view" model="ir.ui.view">
        <field name="name">sport.issue.tree.view</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <tree string="Sport Issue" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="user_id" string="User" optional="show"/>
                <field name="clinic_id" string="Clinic" optional="show"/>
                <field name="date" optional="show"  widget="date"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="sport_issue__form_view" model="ir.ui.view">
        <field name="name">sport.issue.form.view</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <form string="Sport Issue">
                <sheet>
                    <header>                                        
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,done" options="{'clickable': '1'}"/>
                        <button string="Draft"  invisible="state == 'draft'" class="btn-primary" name="action_draft" type="object" />
                        <button string="Open" invisible="state == 'open'" name="action_open" type="object" class="btn-primary" />
                        <button string="Close" invisible="state == 'close'" name="action_close" type="object" class="btn-secundary" />
                    </header>
                    <label for="name" string="Issue"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Issue Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>                        
                            <field name="user_id"/>
                            <field name="date"/>                        
                        </group>
                        <group name="group_product">
                            <field name="assistance" widget="boolean_toggle"/>
                            <field name="clinic_id" />
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Solution" name="solution">
                            <field name="solution"/>
                        </page>
                    </notebook>                
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_issue_calendar_view" model="ir.ui.view">
        <field name="name">sport.issue.calendar</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <calendar
                date_start="date"                
                string="Issues"
                mode="month"
                scales="month,year"
                event_open_popup="true"
                quick_create="0"
                color="name">
                <field name="name"/>
                <field name="user_id" widget="many2one_avatar_user" invisible="not user_id"/>                
                <field name="tag_ids" widget="many2many_tags" invisible="not tag_ids"/>
            </calendar>
        </field>
    </record>

    <record id="sport_issue_view_kanban" model="ir.ui.view">
        <field name="name">sport.issue.kanban</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" quick_create="false">
                <field name="name"/>
                <field name="user_id"/>
                <field name="clinic_id"/>
                <field name="date"/>
                <field name="state"/>                
                <progressbar field="state"
                    colors='{"done": "success", "open": "warning", "expired": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row">
                                <div class="">
                                    <div><strong><field name="name"/></strong></div>
                                    <field name="user_id"/>
                                    <div><field name="clinic_id"/></div>
                                </div>                                
                            </div>                                                       
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="sport_issue_graph_view" model="ir.ui.view">
        <field name="name">sport.issue.graph</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <graph string="Issues" sample="1">
                <field name="name"/>
                <field name="user_id" />
            </graph>            
        </field>
    </record>

    <!-- ACTIONS (WINDOW) -->

    <record id="action_sport_issue" model="ir.actions.act_window">
        <field name="name">Sport Issue</field>
        <field name="res_model">sport.issue</field>
        <field name="view_mode">tree,form,kanban,calendar,graph</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new issue
            </p>
        </field>
    </record>
</odoo>