<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sport_issue_view_tree" model="ir.ui.view">
        <field name="name">sport_issue.view.tree</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Issues">
                <field name="sequence" widget="handle"></field>
                <field name="name"></field>
                <field name="date" optional="show"></field>
                <field name="user_id" optional="hide"></field>
                <field name="state"></field>
            </tree>
        </field>
    </record>

    <record id="sport_issue_view_form" model="ir.ui.view">
        <field name="name">sport_issue.view.form</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <form string="Issues">
                <header>
                <field name="state" options="{'clickable':1}" widget="statusbar" statusbar_visible="draft,open,done"></field>
                <button string="To open" invisible="state not in ('draft')" name="action_open" type="object" class="btn-primary"/>
                <button string="To draft" invisible="state in ('draft')" name="action_draft" type="object" class="btn-secondary"/>
                <!-- <button string="To done" invisible="state in ('done')" name="action_done" type="object" class="oe_highlight"/> -->
                <button string="To done" invisible="state in ('done')" name="action_done" type="object" class="btn-sucess"/>
                <button string="Tags" name="action_add_tags" type="object" class="btn-sucess"/>

                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Issue Name"></field>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="assigned"></field>
                            <field name="user_id" />
                            <field name="clinic_id" />
                        </group>
                        <group>
                            <field name="date"></field>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="assistance" widget="boolean_toggle"></field>
                            <field name="cost"></field>
                        </group>
                    </group>

                    <notebook>
                        <page name="description" string="Description">
                            <field name="description"></field>
                        </page>
                        <page name="solution" string="Solution">
                            <field name="solution"></field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_issue_view_search" model="ir.ui.view">
        <field name="name">sport_issue.view.search</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <search string="Issues">
                <field name="name" filter_domain="['|',('name', 'ilike', self), ('description', 'ilike', self)]"></field>
                <field name="user_id"></field>
                <field name="clinic_id"></field>
                <field name="tag_ids"></field>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="open" string="Open" domain="[('state', '=', 'open')]" />
                <filter name="user" string="User" context="{'group_by': 'user_id'}" />
                <filter name="date" string="Date" context="{'group_by': 'date'}" />
            </search>
        </field>
    </record>

    <record id="sport_issue_view_kanban" model="ir.ui.view">
        <field name="name">sport_issue.view.kanban</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column o_opportunity_kanban" on_create="quick_create" archivable="false" sample="1" js_class="crm_kanban">
                <field name="name"></field>
                <field name="date"></field>
                <field name="clinic_id"></field>
                <field name="user_id"></field>
                <field name="color"></field>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                            <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                                <!-- <div class="ribbon ribbon-top-right">
                                    <span class="text-bg-danger">Lost</span>
                                </div> -->

                                <div class="oe_kanban_content flex-grow-1">
                                    <div class="oe_kanban_details">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="date"></field>
                                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    </div>
                                </div>
                                <div class="oe_kanban_footer">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="clinic_id"></field>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"/>
                            </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="sport_issue_view_pivot" model="ir.ui.view">
        <field name="name">sport_issue.view.pivot</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <pivot string="Sport Issues" disable_linking="true">
                <field name="date" interval="month" type="col"></field>
                <field name="user_id" type="row"></field>
                <field name="cost" type="measure"></field>
            </pivot>
        </field>
    </record>

    <record id="sport_issue_view_graph" model="ir.ui.view">
        <field name="name">sport_issue.view.graph</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <graph string="Sport Issues" type="pie" sample="1">
               <field name="user_id"></field>
               <field name="cost" type="measure"></field>
            </graph>
        </field>
    </record>

    <record id="sport_issue_view_calendar" model="ir.ui.view">
        <field name="name">sport_issue.view.calendar</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <calendar string="Sport Issues" mode="month" date_start="date" color="tag_ids">
                <field name="name"></field>
                <field name="clinic_id"></field>
                <field name="cost"></field>
                <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                <field name="description"></field>
            </calendar>
        </field>
    </record>

    <record id="action_sport_issue" model="ir.actions.act_window">
        <field name="name">Sport Issues</field>
        <field name="res_model">sport.issue</field>
        <field name="view_mode">kanban,tree,form,pivot,graph,calendar</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport issue
            </p>
        </field>
    </record>

</odoo>
