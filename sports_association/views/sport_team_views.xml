<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- VIEWS -->
    
    <record id="sport_team_tree_view" model="ir.ui.view">
        <field name="name">sport.team.tree.view</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <tree string="Teams">                
                <field name="name"/>
                <field name="total_players"/>
            </tree>
        </field>
    </record>

    <record id="sport_team__form_view" model="ir.ui.view">
        <field name="name">sport.team.form.view</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <sheet>
                    <header>                        
                        <button string="Starter"  class="btn-succes" name="action_all_starters" type="object"/>
                        <button string="Add free players" name="action_add_players" type="object" class="btn-warning"/>
                    </header>
                    <field name="logo" widget="image" class="oe_right oe_avatar"/>
                    <label for="name" string="Team"/>
                    <div class="oe_title text-center">
                        <h1>
                            <field name="name" placeholder="Team Name"/>
                        </h1>
                    </div>
                    <notebook>
                        <page name="players" string="Players">
                            <!-- <field name="player_ids" context="{'tree_view_ref':'sports_association.sport_player_view_simple_tree',
                                                                    'form_view_ref':'sports_association.sport_player_view_simple_form'}">
                            </field> -->
                            <field name="player_ids" context="{'default':name}">
                                <tree editable="bottom">
                                    <field name="photo" string="" widget="image" class="oe_left oe_avatar" options="{'size': [25, 25]}"/>
                                    <field name="name"/>
                                    <field name="position"/>
                                    <field name="is_starter" widget="boolean_toggle"/>
                                </tree>                            
                           </field>                             
                        </page>
                    </notebook>                
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_team_search_view" model="ir.ui.view">
        <field name="name">sport.team.search</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <search string="Search Teams">
                <field name="name"/>                
            </search>
        </field>
    </record>

    <record id="sport_team_kanban_view" model="ir.ui.view">
        <field name="name">sport.team.kanban.view</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="logo"/>
                <field name="total_players"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-4">
                                    <field name="logo" widget="image" class="oe_right oe_avatar"/>                                    
                                </div>
                                <div class="col-8">
                                    <div><strong><field name="name"/></strong></div>                                    
                                    <div><t t-out="record.total_players.value"/></div>
                                </div>                                
                            </div>                                                       
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ACTIONS (WINDOW) -->

    <record id="action_sport_team" model="ir.actions.act_window">
        <field name="name">Sport team</field>
        <field name="res_model">sport.team</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new team
            </p>
        </field>
    </record>
</odoo>