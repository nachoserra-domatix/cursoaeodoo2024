<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- VIEWS -->
    
    <record id="sport_team_tree_view" model="ir.ui.view">
        <field name="name">sport.team.tree.view</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <tree string="Teams" multi_edit="1">                
                <field name="name"/>             
            </tree>
        </field>
    </record>

    <record id="sport_team__form_view" model="ir.ui.view">
        <field name="name">sport.team.form.view</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <sheet>
                    <header>                        
                        
                    </header>
                    <label for="name" string="Team"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Team Name"/>
                        </h1>
                    </div>
                    <notebook>
                        <page name="players" string="Players">
                            <field name="player_ids">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="position" />
                                    <field name="is_starter" widget="boolean_toggle"/>
                                </tree>                            
                           </field>                             
                        </page>
                    </notebook>                
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTIONS (WINDOW) -->

    <record id="action_sport_team" model="ir.actions.act_window">
        <field name="name">Sport team</field>
        <field name="res_model">sport.team</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new team
            </p>
        </field>
    </record>
</odoo>