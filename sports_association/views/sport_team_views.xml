<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sport_team_tree" model="ir.ui.view">
        <field name="name">Sport teams</field>
        <field name="model">sport.team</field>
        <field name="type">tree</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <tree string="Teams">
                <field name="name" />
                <field name="sport_id" />
            </tree>
        </field>
    </record>

    <record id="sport_team_form" model="ir.ui.view">
        <field name="name">Sport team Form</field>
        <field name="model">sport.team</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="team">
                <header>
                    <button name="action_check_starter" string="Check Starters"
                        type="object"
                        class="oe_highlight" />
                    <button name="action_uncheck_starter"
                        string="Uncheck Starters"
                        type="object"
                        class="oe_highlight" />
                    <button name="action_add_free_players"
                        string="Add Free Players"
                        type="object"
                        class="oe_highlight" />
                </header>
                <sheet>
                    <field name="logo" widget="image" class="oe_avatar" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="team Name" />
                        </h1>
                    </div>
                    <group>
                        <field name="sport_id" />
                        <field name="player_count" />
                    </group>
                    <group>
                    </group>
                    <notebook>
                        <page string="Players">
                            <field name="player_ids"
                                context="{'tree_view_ref': 'sports_association.sport_player_simple_tree',
                                        'form_view_ref': 'sports_association.sport_player_form_tree'}">
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_team_view_kanban" model="ir.ui.view">
        <field name="name">sport.team.view.kanban</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <kanban default_group_by="sport_id">
                <field name="name" />
                <field name="player_count" />
                <field name="logo" />
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable">
                            <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                        </t>
                        <t t-if="widget.editable">
                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                        </t>
                    </t>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_content flex-grow-1">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name" />
                                </strong>
                            </div>
                            <div class="">
                                <field name="player_count" />
                                <field name="logo" widget="image" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>