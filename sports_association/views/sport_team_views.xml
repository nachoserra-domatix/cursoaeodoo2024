<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sport_team_view_tree" model="ir.ui.view">
        <field name="name">sport_team.view.tree</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Teams">
                <field name="name" />
                <field name="sport_id" />
                <field name="player_ids" />
            </tree>
        </field>
    </record>

    <record id="sport_team_view_form" model="ir.ui.view">
        <field name="name">sport_team.view.form</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <form string="Teams">
                <header>
                    <button string="Mark as regular" name="action_mark_players_regular" type="object" class="btn-primary"/>
                    <button string="Unmark as regular" name="action_unmark_players_regular" type="object" class="btn-secondary"/>
                    <button string="Add Young Players" name="action_add_young_players" type="object" class="btn-success"/>
                    <!-- <field name="state" options="{'clickable':1}" widget="statusbar" statusbar_visible="draft,open,done"/> -->
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Team Name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="logo" widget="image" class="ooavatar"/>
                        </group>
                        <group>
                            <field name="sport_id" />
                            <field name="players_count" />
                        </group>
                    </group>
                    <notebook>
                        <page name="player_ids" string="Players">
                            <field name="player_ids" context="{'tree_view_ref':'sports_association.sport_player_view_simple_tree', 
                                                                'form_view_ref':'sports_association.sport_player_view_simple_form'}"/>
                            <!-- <field name="player_ids" context="{'default_position': 'Deportiva'}">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="age" />
                                    <field name="position" />
                                    <field name="regular" widget="boolean_toggle"/>
                                </tree> 
                            </field> -->
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_sport_team" model="ir.actions.act_window">
        <field name="name">Sport Team</field>
        <field name="res_model">sport.team</field>
        <field name="view_mode">tree,form,kanban</field>
        <!-- <field name="domain">[]</field> -->
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport team
            </p>
        </field>
    </record>
</odoo>