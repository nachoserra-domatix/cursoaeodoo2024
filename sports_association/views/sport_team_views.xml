<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sport_team_view_form" model="ir.ui.view">
        <field name="name">Team</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <header>
                    <button string="Set players to starters" name="set_substitutes" type="object" class="oe_highlight btn-primary" />
                    <button string="Set players to starters" name="set_starters" type="object" class="oe_highlight btn-danger" />
                    <button string="Add free players" name="action_add_players" type="object" class="btn-warning" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="sport_team_button_box">
                        <button name="action_view_players"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-users">
                                <field name="player_count" string="Players" widget="statinfo" />
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Team Name" />
                        </h1>
                        <field name="logo" widget="image" options="{'size': [150, 150]}"/>
                    </div>
                    <group>
                        <group>
                            <field name="sport_id"/>
                        </group>
                        <notebook>
                            <page string="Issues" name="issues">
                                <field name="player_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="age"/>
                                        <field name="position"/>
                                        <field name="team_id"/>
                                        <field name="starter" widget="boolean_toggle" />
                                    </tree>
                                </field>
                                <!-- <field name="player_ids" nolabel="1" context="{'tree_view_ref':'sports_association.sport_player_simple_view_tree',
                                                                                'form_view_ref':'sports_association.sport_player_simple_view_form'}"/> -->
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- sport.team kanban view -->
    <record id="sport_team_view_kanban" model="ir.ui.view">
        <field name="name">sport.team.view.kanban</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <kanban string="Teams">
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="sport_id"/>
                <field name="logo"/>
                <field name="color"/>

                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="sport_id"/>
                                </div>
                                <div>
                                    <field name="logo" widget="image" options="{'size': [150, 150]}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_sport_team" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">sport.team</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a new sport team
            </p>
        </field>
    </record>
</odoo>