<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- VIEWS -->
    
    <record id="sport_ticket_tree_view" model="ir.ui.view">
        <field name="name">sport.ticket.tree.view</field>
        <field name="model">sport.ticket</field>
        <field name="arch" type="xml">
            <tree string="Clinics" multi_edit="1">                
                <field name="name"/>
                <field name="partner_id"/>
                <field name="match_id" />
            </tree>
        </field>
    </record>

    <record id="sport_ticket_view_form" model="ir.ui.view">
        <field name="name">sport.ticket.view.form</field>
        <field name="model">sport.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket">
                <sheet>                    
                    <group>
                        <group>
                            <field name="name" />
                            <field name="partner_id"/>
                            <field name="match_id" />                        
                        </group>                        
                    </group>                    
                </sheet>
            </form>
        </field>
    </record>   

    <!-- ACTIONS (WINDOW) -->

    <record id="action_sport_ticket" model="ir.actions.act_window">
        <field name="name">Sport ticket</field>
        <field name="res_model">sport.ticket</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new ticket
            </p>
        </field>
    </record>
</odoo>