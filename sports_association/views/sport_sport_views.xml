<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sport_sport_view_form" model="ir.ui.view">
        <field name="name">Sports</field>
        <field name="model">sport.sport</field>
        <field name="arch" type="xml">
            <form string="Sports">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Sport Name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="image"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sport_sport" model="ir.actions.act_window">
        <field name="name">Sports</field>
        <field name="res_model">sport.sport</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a new sport
            </p>
        </field>
    </record>
</odoo>