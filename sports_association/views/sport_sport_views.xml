<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sport_sport_view_tree" model="ir.ui.view">
        <field name="name">sport_sport.view.tree</field>
        <field name="model">sport.sport</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Sports">
                <field name="name" />
                <field name="team_ids" />
            </tree>
        </field>
    </record>

    <record id="sport_sport_view_form" model="ir.ui.view">
        <field name="name">sport_sport.view.form</field>
        <field name="model">sport.sport</field>
        <field name="arch" type="xml">
            <form string="Sports">
                <header>
                    <!-- <field name="state" options="{'clickable':1}" widget="statusbar" statusbar_visible="draft,open,done"/> -->
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Sport Name" />
                        </h1>
                    </div>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description" />
                        </page>
                        <page name="team_ids" string="Teams">
                            <field name="team_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_sport_sport" model="ir.actions.act_window">
        <field name="name">Sport Sport</field>
        <field name="res_model">sport.sport</field>
        <field name="view_mode">tree,form,kanban</field>
        <!-- <field name="domain">[]</field> -->
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport sport
            </p>
        </field>
    </record>
</odoo>