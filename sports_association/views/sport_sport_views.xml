<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <record id="sport_sport_tree" model="ir.ui.view">
        <field name="name">Sports</field>
        <field name="model">sport.sport</field>
        <field name="type">tree</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="sport_sport_form" model="ir.ui.view">
        <field name="name">Sport sport Form</field>
        <field name="model">sport.sport</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="sport">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="sport Name" />
                            <field name="description" />
                        </h1>
                    </div>
                    <group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
