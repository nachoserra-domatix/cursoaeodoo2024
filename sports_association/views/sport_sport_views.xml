<odoo>
    <record id="sport_sport_view_tree" model="ir.ui.view">
        <field name="name">sport.sport.tree.view</field>
        <field name="model">sport.sport</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>
    <record id="sport_player_view_form" model="ir.ui.view">
        <field name="name">sport.sport.view.form</field>
        <field name="model">sport.sport</field>
        <field name="arch" type="xml">
            <form string="Sport">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Team Name" />
                        </h1>
                    </div>
                    <group>
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_sport_sport" model="ir.actions.act_window">
        <field name="name">Sport Sport</field>
        <field name="res_model">sport.sport</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Sport
            </p>
        </field>
    </record>
</odoo>
