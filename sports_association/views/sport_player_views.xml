<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_sport_player" model="ir.actions.act_window">
        <field name="name">Sport Player</field>
        <field name="res_model">sport.player</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new player
            </p>
        </field>
    </record>
    
    <record id="sport_player_view_tree" model="ir.ui.view">
        <field name="name">sport_player.view.tree</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Sport">
                <field name="name"></field>
                <field name="years" optional="show"></field>
                <field name="team_id" optional="show"></field>
                <field name="position" optional="show"></field>
                <field name="tittle" optional="show"></field>
            </tree>
        </field>
    </record>

    <record id="sport_player_view_form" model="ir.ui.view">
        <field name="name">sport_player.view.form</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <form string="Sport Player">
                <header>
                    <button string="Create Issue" name="%(action_sport_create_issue)d" context="{'default_player_id': id}" type="action" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="birthday"></field>
                        <field name="years" />
                        <field name="street"/>
                        <field name="city"/>
                        <field name="country_id"/>
                        <field name="zip"/>
                    </group>
                    <group>
                        <field name="team_id"></field>
                        <field name="sport_name"></field>
                        <field name="position"></field>
                        <field name="tittle" widget="boolean_toggle"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_player_view_tree_simple" model="ir.ui.view">
        <field name="name">sport_player.view.tree.simple</field>
        <field name="model">sport.player</field>
        <field eval="100" name="priority"/>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Sport">
                <field name="name"></field>
                <field name="position" optional="show"></field>
            </tree>
        </field>
    </record>

    <record id="sport_player_view_form_simple" model="ir.ui.view">
        <field name="name">sport_player.view.form.simple</field>
        <field name="model">sport.player</field>
        <field eval="100" name="priority"/>
        <field name="arch" type="xml">
            <form string="Sport Player">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="position"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_player_view_search" model="ir.ui.view">
        <field name="name">sport_player.view.search</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <search string="Players">
                <field name="name" filter_domain="['|',('sport_name', 'ilike', self), ('team_id', 'ilike', self)]"></field>
                <filter name="tittle" string="Tittle" domain="[('tittle', '=', 'True')]"/>
                <filter name="player" string="Player" context="{'group_by': 'name'}" />
                <filter name="sport_name" string="Sport" context="{'group_by': 'sport_name'}" />
                <filter name="birthday" string="Birthday" context="{'group_by': 'birthday'}" />
            </search>
        
        </field>
    </record>
</odoo>
