<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sport_player_form_view" model="ir.ui.view">
        <field name="name">sport.player.form</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title mb24">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="team_id"/>
                            <field name="sport_id" invisible="1"/>
                            <field name="sport_name"/>
                            <field name="position_id" domain="[('sport_id', '=', sport_id)]"/>
                        </group>
                        <group>
                            <field name="birth_date"/>
                            <field name="age"/>
                            <field name="headline"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sport_player_tree_view" model="ir.ui.view">
        <field name="name">sport.player.tree</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="team_id"/>
                <field name="headline"/>
            </tree>
        </field>
    </record>
    <record id="sport_player_search_view" model="ir.ui.view">
        <field name="name">sport.player.search</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter string="Headlines" 
                    name="headline_true" 
                    domain="[('headline', '=', True)]"/>
                <filter string="No headlines" 
                    name="headline_false" 
                    domain="[('headline', '=', False)]"/>
            </search>
        </field>
    </record>
    <record id="sport_player_action" model="ir.actions.act_window">
        <field name="name">Players</field>
        <field name="res_model">sport.player</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="sport_player_menu" 
    name="Players" 
    parent="sports_association.sport_sport_menu"/>
    <menuitem id="sport_player_menu_menu" 
    name="Players" 
    parent="sports_association.sport_player_menu" 
    action="sport_player_action"/>
</odoo>