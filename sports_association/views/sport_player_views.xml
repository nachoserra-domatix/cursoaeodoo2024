<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- VIEWS -->
    
    <record id="sport_player_tree_view" model="ir.ui.view">
        <field name="name">sport.player.tree.view</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <tree string="Players">                
                <field name="photo" string="" widget="image" class="oe_right oe_avatar" options="{'size': [25, 25]}"/>
                <field name="name"/>
                <field name="age"/>
                <field name="team_id"/>
                <field name="position" />
                <field name="is_starter" widget="boolean_toggle" />
            </tree>
        </field>
    </record>

    <record id="sport_player_view_simple_tree" model="ir.ui.view">
        <field name="name">sport_player.view.simple.tree</field>
        <field eval="100" name="priority"/>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <tree string="Players">
                <field name="name" />
                <field name="age" />
            </tree>
        </field>
    </record>

    <record id="sport_player_form_view" model="ir.ui.view">
        <field name="name">sport.player.form.view</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <form string="Player">
                <header>                        
                    <button string="Starter"  class="btn-primary" name="action_starter" type="object"/>
                    <button string="Reserve"  class="btn-primary" name="action_reserve" type="object"/>
                    <button string="Create issue" name="%(action_sport_create_issue)d" context="{'default_player_id': id}" type="action" class="oe_highlight"/>
                </header>
                <sheet>                                        
                    <field name="photo" widget="image" class="oe_avatar"/>
                    <label for="name" string="Name"/>
                    <div class="oe_title">                        
                        <h1>
                            <field name="name" placeholder="Player Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>                        
                            <field name="birthdate"/>
                            <field name="age"/>
                            <field name="position"/>                        
                        </group>
                        <group name="group_product">                            
                            <field name="team_id" domain="[('sport_id', '!=', False)]"/>
                            <field name="sport_name"/>
                            <field name="is_starter" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="street"/>
                            <field name="city"/>
                            <field name="country_id"/>
                        </group>
                    </group>               
                </sheet>
            </form>
        </field>
    </record>    

    <record id="sport_player_view_simple_form" model="ir.ui.view">
        <field name="name">sport_player.view.simple.form</field>
        <field name="model">sport.player</field>
        <field eval="100" name="priority"/>
        <field name="arch" type="xml">
            <form string="Player">
                <sheet>
                    <field name="name" />
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_player_search_view" model="ir.ui.view">
        <field name="name">sport.player.search</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <search string="Search Players">
                <field name="name"/>
                <field name="team_id"/>
                <field name="sport_name"/>
                <separator/>
                <filter name="is_starter" string="is_starter" domain="[('is_starter','=',True)]" help="Show active players"/>                
                <group string="Group By">
                    <filter string="Team" name="team" domain="[]" context="{'group_by':'team_id'}" groups="base.group_multi_company"/>
                    <filter string="Birthdate" name="birthdate" context="{'group_by':'birthdate'}"/>
                    <filter string="Sport" name="sport" context="{'group_by':'sport_name'}"/>                    
                </group>
            </search>
        </field>
    </record>

    <record id="sport_player_kanban_view" model="ir.ui.view">
        <field name="name">sport.player.kanban.view</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="is_starter"/>                
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-4">
                                    <field name="photo" widget="image" class="oe_right oe_avatar"/>                                    
                                </div>
                                <div class="col-8">
                                    <div><strong><field name="name"/></strong></div>
                                    <div><field name="team_id"/></div>
                                    <div><strong>Position: </strong><field name="position"/></div>
                                    <div class="text-end"><span class="badge rounded-pill"><t t-out="record.is_starter.value"/></span></div>
                                </div>                                
                            </div>                                                       
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>       

    <!-- ACTIONS (WINDOW) -->

    <record id="action_sport_player" model="ir.actions.act_window">
        <field name="name">Sport player</field>
        <field name="res_model">sport.player</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new player
            </p>
        </field>
    </record>
</odoo>