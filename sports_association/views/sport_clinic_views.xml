<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- sport.clinic tree view -->
    <record id="sport_clinic_view_tree" model="ir.ui.view">
        <field name="name">sport.clinic.view.tree</field>
        <field name="model">sport.clinic</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="phone"/>
                <field name="available"/>
                <field name="email"/>
                <field name="issue_ids"/>
            </tree>
        </field>
    </record>

    <!-- sport.clinic form view -->
    <record id="sport_clinic_view_form" model="ir.ui.view">
        <field name="name">sport.clinic.view.form</field>
        <field name="model">sport.clinic</field>
        <field name="arch" type="xml">
            <form string="Clinic">
                <header>
                    <button class="oe_highlight" name="action_check_assistance" type="object" string="Confirm assistance"/>
                    <button class="oe_highlight" name="%(sport_create_issue_action)d" context="{'default_clinic_id':id}" type="action" string="Create issue"/>
                </header>
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_issues" context="{'default_clinic_id': id, 'search_default_draft': 1}" type="object" icon="fa-stethoscope" class="oe_stat_button">
                        <field string="Issues" name ="issue_count" widget="statinfo" />
                    </button>
                </div>
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="available"/>
                        <field name="phone"/>
                        <field name="email"/>
                    </group>
                    <notebook>
                        <page string="Issues" name="issues">
                            <field name="issue_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="clinic_id"/>
                                    <field name="tag_ids" widget="many2many_tags"/>
                                    <field name="assistance" widget="boolean_toggle"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sport_clinic" model="ir.actions.act_window">
        <field name="name">Clinics</field>
        <field name="res_model">sport.clinic</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a new sport clinic
            </p>
        </field>
    </record>
</odoo>