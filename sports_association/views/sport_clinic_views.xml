<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- VIEWS -->
    
    <record id="sport_clinic_tree_view" model="ir.ui.view">
        <field name="name">sport.clinic.tree.view</field>
        <field name="model">sport.clinic</field>
        <field name="arch" type="xml">
            <tree string="Clinics" multi_edit="1">                
                <field name="name"/>
                <field name="issue_ids"/>
            </tree>
        </field>
    </record>

    <record id="sport_clinic_view_form" model="ir.ui.view">
        <field name="name">sport_clinic.view.form</field>
        <field name="model">sport.clinic</field>
        <field name="arch" type="xml">
            <form string="Clinic">
                <header>
                    <button string="Check Assistance" name="action_check_assistance" type="object" class="oe_highlight"/>                    
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_issues" 
                            class="oe_stat_button" icon="fa-stethoscope"
                            context="{'default_clinic_id': id}">
                            <field string="Issues" name="issue_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="phone"/>
                            <field name="email" />                        
                        </group>
                        <group>
                            <field name="available" widget="boolean_toggle"/>                                                
                        </group>
                    </group>
                    <notebook>
                        <page name="issues" string="Issues">
                            <field name="issue_ids">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="date" />
                                    <field name="assistance" widget="boolean_toggle"/>
                                </tree>                            
                           </field>                             
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>   

    <!-- ACTIONS (WINDOW) -->

    <record id="action_sport_clinic" model="ir.actions.act_window">
        <field name="name">Sport clinic</field>
        <field name="res_model">sport.clinic</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new clinic
            </p>
        </field>
    </record>
</odoo>