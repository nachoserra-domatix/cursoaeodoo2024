<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- VIEWS -->
    
    <record id="sport_league_tree_view" model="ir.ui.view">
        <field name="name">sport.league.tree.view</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <tree string="Sports">                
                <field name="name"/>
                <field name="date_start" optional="show"/>
                <field name="date_end" optional="show"/>
                <field name="sport_id" string="sport"/>              
            </tree>
        </field>
    </record>
    
    <record id="sport_league_form_view" model="ir.ui.view">
        <field name="name">sport.league.form.view</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <form string="Leagues">
                <header>
                    <button string="Set Score" name="set_score" type="object" class="oe_highlight"/>
                    <button string="Create Match" name="%(action_sport_league_match)d" context="{'default_league_id': id}" type="action" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_match" type="object" class="oe_stat_button" icon="fa-futbol-o">
                            <field name="match_count" string="Matches" widget="statinfo"/>
                        </button>
                    </div>                                        
                    <label for="name" string="League"/>
                    <div class="oe_title text-center">
                        <h1>
                            <field name="name" placeholder="League Name"/>
                        </h1>
                    </div>
                    <group>                        
                        <field name="sport_id" string="sport"/>
                    </group>
                    <group>                        
                        <field name="date_start"/>
                        <field name="date_end"/>                    
                    </group>
                    <notebook>
                        <page name="Teams" string="Teams">                            
                            <field name="league_line_ids">
                                <tree editable="bottom">                                    
                                    <field name="team_id" domain="[('sport_id','=', parent.sport_id)]"/>
                                    <field name="points"/>                                    
                                </tree>                            
                           </field>                             
                        </page>
                    </notebook>                
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTIONS (WINDOW) -->

    <record id="action_sport_league" model="ir.actions.act_window">
        <field name="name">Leagues</field>
        <field name="res_model">sport.league</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport
            </p>
        </field>
    </record>
</odoo>