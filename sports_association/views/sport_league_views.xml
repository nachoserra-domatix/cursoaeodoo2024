<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- sport.league tree view -->
    <record id="sport_league_view_tree" model="ir.ui.view">
        <field name="name">sport.league.view.tree</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <tree string="Leagues">
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="start_date" optional="show" />
                <field name="end_date" optional="show" />
                <field name="sport_id" optional="show" />
            </tree>
        </field>
    </record>

    <!-- sport.league form view -->
    <record id="sport_league_view_form" model="ir.ui.view">
        <field name="name">sport.league.view.form</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <form string="Leagues">
                <header>
                    <button string="Set Score" name="set_score" type="object" class="oe_hightlight"/>
                    <button string="Create match" name="%(sport_create_league_match_action)d" type="action" class="oe_hightlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_matches" type="object" icon="fa-futbol-o" class="oe_stat_button">
                            <field string="Matches" name ="match_count" widget="statinfo" />
                        </button>
                    </div>
                    <group>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name"/>
                            <field name="sport_id" />
                        </group>
                        <group>
                            <!-- Add your fields here -->
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Teams" name="teams">
                            <field name="sport_league_ids">
                                <tree editable="bottom">
                                    <!-- Add your fields here -->
                                    <field name="team_id" domain="[('sport_id','=',parent.sport_id)]"/>
                                    <field name="points"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- sport.league action window -->
    <record id="sport_league_action" model="ir.actions.act_window">
        <field name="name">Leagues</field>
        <field name="res_model">sport.league</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Create new league</p>
        </field>
    </record>
</odoo>