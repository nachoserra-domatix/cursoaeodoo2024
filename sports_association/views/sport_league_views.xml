<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sport_league_view_tree" model="ir.ui.view">
        <field name="name">sport_league.view.tree</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <tree string="Leagues">
                <field name="name" />
                <field name="start_date" optional="show"/>
                <field name="end_date" optional="show"/>
                <field name="sport_id" optional="show" />
            </tree>
        </field>
    </record>

    <record id="sport_league_view_form" model="ir.ui.view">
        <field name="name">sport_league.view.form</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <form string="Leagues">
                <header>
                    <button string="Set Score" name="set_score" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>

                    
                    <group>
                        <field name="name" />
                        <field name="sport_id"/>
                    </group>
                    <group>
                        
                        <field name="start_date"/>
                        <field name="end_date"/>
                    
                    </group>
                </group>
                <notebook>
                    <page name="teams" string="Teams">
                        <field name="sport_league_ids">
                            <tree editable="bottom">
                                <field name="team_id" domain="[('sport_id','=', parent.sport_id)]"/>
                                <field name="points"/>
                            </tree>
                            </field>
                    </page>
                </notebook>
                    
                </sheet>
            </form>
        </field>
    </record>
    <record id="sport_league_action" model="ir.actions.act_window">
        <field name="name">Leagues</field>
        <field name="res_model">sport.league</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Create a new league</p>
        </field>
    </record>
</odoo>