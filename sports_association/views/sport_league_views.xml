<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sport_league_view_tree" model="ir.ui.view">
        <field name="name">sport_league.view.tree</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <tree string="Leagues">
                <field name="name" />
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="sport_id" />
            </tree>
        </field>
    </record>

    <record id="sport_league_view_form" model="ir.ui.view">
        <field name="name">sport_league.view.form</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <form string="League">
                <header>
                    <button string="Set Score" name="set_score" type="object" class="oe_highlight"/>
                    <button string="Create Game" name="%(action_sport_create_game)d" type="action" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_games" icon="fa-list">
                            <field string="Games" name="game_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="League Name" />
                        </h1>
                    </div>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="sport_id" />
                    </group>
                    <notebook>
                        <page name="league_line" string="League Lines">
                            <field name="league_line_ids">
                                <tree editable="bottom">
                                    <field name="team_id" />
                                    <field name="points" />
                                </tree>
                           </field>                             
                        </page>
                        <page name="game" string="Games">
                            <field name="game_ids">
                                <tree editable="bottom">
                                    <field name="game_date" />
                                    <field name="winner_team_id" />
                                    <field name="winner_points" />
                                </tree>
                           </field>                             
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Actions -->
    <record id="action_sport_league" model="ir.actions.act_window">
        <field name="name">Sport League</field>
        <field name="res_model">sport.league</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport league
            </p>
        </field>
    </record>
</odoo>