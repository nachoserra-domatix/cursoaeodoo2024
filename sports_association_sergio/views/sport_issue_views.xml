<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sport_issue_view_tree" model="ir.ui.view">
        <field name="name">sport_issue.view.tree</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <tree string="Issues">
                <field name="sequence" widget="handle"></field>
                <field name="name"></field>
                <field name="date" optional="show"></field>
                <field name="user_id" optional="hide"></field>
                <field name="state"></field>
            </tree>
        </field>
    </record>
    <record id="sport_issue_view_form" model="ir.ui.view">
        <field name="name">sport_issue.view.form</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <form string="Issues">
                <header>
                    <field name="state" options="{'clickable':1}" widget="statusbar" statusbar_visible="draft,open,done"></field>
                    <button string="Find Tags" groups="sports_association_sergio.res_groups_sports_association_manager" name="action_find_tags" type="object" class="oe_highlight"/>
                    <button string="To draft" invisible="state in ('draft')" name="action_draft" type="object" class="oe_highlight"></button>
                    <button string="To open" invisible="state in ('open')" name="action_open" type="object" class="oe_highlight"></button>
                    <button string="To done" invisible="state in ('done')" name="action_done" type="object" class="oe_highlight"></button>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Issue name"></field>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="assigned"></field>
                            <field name="user_id" options="{'no_quick_create':True,'no_open': True}" context="{'search_default_filter_no_share':1}"></field>
                            <field name="user_phone"></field>
                            <field name= "clinic_id" domain="[('available', '=', True)]"></field>
                            <field name= "cost"></field>
                        </group>
                        <group>
                            <field name="date"></field>
                            <field name="tags_ids" widget="many2many_tags" options="{'no_quick_create':True,'no_create': True}"></field>
                            <field name="assistance" widget="boolean_toogle"></field>
                            
                        </group>
                    </group>
                    <notebook>
                        <page name="name" string="Description">
                            <field name="description"></field>
                        </page>
                        <page name="solution" string="Solution">
                            <field name="solution"></field>
                        </page>
                        <page name="tasks" string="Tasks">
                            <field name="task_ids" context="{'default_state': state}">
                                <tree editable="bottom">
                                    <field name="name"></field>
                                    <field name="state"></field>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="sport_issue_view_search" model="ir.ui.view">
        <field name="name">sport_issue.view.search</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <search string="Incidencias">
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"></field>
                <field name="user_id"></field>
                <field name="clinic_id"></field>
                <field name="tags_ids"></field>
                <filter string='Draft' name='draft' domain="[('state', '=', 'draft')]"/>
                <filter string='Open' name='open' domain="[('state', '=', 'open')]"/>
                <filter string="User" name="user" context="{'group_by':'user_id'}"/>
                <filter string="Date" name="date" context="{'group_by':'date:month'}"/>
            </search>
        </field>
    </record>
    <record id="sport_issue_view_kanban" model="ir.ui.view">
        <field name="name">sport_issue.view.kanban</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <kanban default_group_by='state'>
                <field name="name"></field>
                <field name="user_id"></field>
                <field name="clinic_id"></field>
                <field name="tags_ids"></field>
                <field name="date"></field>
                <field name="color"></field>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="date"></field>
                                </div>
                                <div>
                                    <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>        
                            </div>    
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="clinic_id"></field>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                                    </div>
                                </div>
                            </div>                                            
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="sport_issue_view_pivot" model="ir.ui.view">
        <field name="name">sport_issue.view.pivot</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
           <pivot string="Issues">
                <field name="user_id" type="row"></field>
                <field name="date" type="col"></field>
                <field name="cost" type="measure"></field>
            </pivot>
        </field>
    </record>
    <record id="sport_issue_view_graph" model="ir.ui.view">
        <field name="name">sport_issue.view.graph</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <graph string="" type="pie">
                <field name="user_id"></field>
                <field name="cost" type="measure"></field>
            </graph>
        </field>
    </record>
    <record id="sport_issue_view_calendar" model="ir.ui.view">
        <field name="name">sport_issue.view.calendar</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <calendar string="Issue" date_start="date" color="state">
                <field name="name"></field>
                <field name="user_id"></field>
                <field name="state" filters="1" invisible="1"></field>
            </calendar>
        </field>
    </record>
</odoo>