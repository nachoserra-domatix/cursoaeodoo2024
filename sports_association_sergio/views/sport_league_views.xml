<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sport_league_view_tree" model="ir.ui.view">
        <field name="name">sport_league.view.tree</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <tree string="Leagues">
                <field name="name"></field>
                <field name="sport_id"></field>
                <field name="start_date"></field>
                <field name="end_date"></field>
                <field name="league_line_ids"></field>
            </tree>
        </field>
    </record>

    <record id="sport_league_view_form" model="ir.ui.view">
        <field name="name">sport_league.view.form</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <form string="Leagues">
                <header>
                    <button string="Set Score" name="set_score" type="object" class="oe_highlight"/>
                    <button string="Create Match" name="%(action_sport_create_match)d" context="{'default_league_id':id}" type="action" class="btn-secondary"/>
                    
                </header>                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_matches" class="oe_stat_button" icon="fa-futbol-o">
                            <field string="Match Count" name="match_count" widget="statinfo"></field>
                        </button> 
                    </div>  
                    <group>
                        <field name="name"></field>
                        <field name="sport_id"></field>
                    </group>
                    <group>
                        <field name="start_date"></field>
                        <field name="end_date"></field>                        
                    </group>
                </sheet>
                <notebook>
                    <page name="teams" string="Teams">
                        <field name="league_line_ids">
                            <tree editable="bottom">
                                <field name="team_id" domain="[('sport_id','=',parent.sport_id)]"></field>
                                <field name="points"></field>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
</odoo>