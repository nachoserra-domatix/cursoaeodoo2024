<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sport_team_view_tree" model="ir.ui.view">
        <field name="name">sport_team.view.tree</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <tree string="Teams">
                <field name="name"></field>
                <field name="sport_id"></field>
            </tree>
        </field>
    </record>

    <record id="sport_team_view_kanban" model="ir.ui.view">
        <field name="name">sport_team.view.kanban</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <kanban default_group_by='sport_id'>
                <field name="name"></field>
                <field name="logo"></field>
                <field name="player_count"></field>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                    </t>
                    <t t-name="kanban-box">
                        <div>
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="logo" widget="image" class="oe_avatar"></field>
                                </div>
                                <div>
                                    <field name="player_count"></field>
                                </div>
                                <div>
                                    <field name="player_ids"/>
                                </div>
                            </div>
                        </div>                        
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="sport_team_view_form" model="ir.ui.view">
        <field name="name">sport_team.view.tree</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <header>
                    <button string="Mark starters" name="action_mark_starters" type="object" class="oe_highlight"></button>
                    <button string="Unmark starters" name="action_unmark_starters" type="object" class="oe_highlight"></button>
                    <button string="Add Free Players" name="action_add_players" type="object" class="oe_highlight"></button>
                    <button string="Players" type="object" name="action_view_players" class="oe_stat_button" icon="fa-players"></button>                    
                </header>                
                <sheet>
                    <group>
                        <field name="name"></field>
                        <field name="sport_id"></field>
                        <field name="player_count"></field>
                        <field name="logo" widget="image" class="oe_avatar"></field>
                    </group>
                    <notebook>
                        <page name="players" string="Players">
                            <field name="player_ids" context="{'tree_view_ref': 'sports_association_sergio.sport_player_view_simple_tree',
                                                                'form_view_ref': 'sports_association_sergio.sport_player_view_simple_form'}"></field>
                            <!--
                            <field name="player_ids" context="{'default_position':'delantero','default_starter':False}">
                                <tree editable="bottom">
                                    <field name="name"></field>
                                    <field name="age"></field>
                                    <field name="position" ></field>
                                    <field name="starter"></field>
                                </tree>
                            </field>
                            -->
                        </page>
                    </notebook>                        
                </sheet>
            </form>
        </field>
    </record> 
</odoo>
