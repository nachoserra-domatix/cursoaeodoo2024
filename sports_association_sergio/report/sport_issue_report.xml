<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_sport_issue">
        <t t-call="web.html_container"> 
            <t t-foreach="docs" t-as="o">         
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="mt-4">
                            <span>Issue #</span>
                            <!--
                                <span t-esc="o._get_name()"></span>
                                <span t-out="o._get_name()"></span>
                            -->
                            <span t-field="o.name"></span>
                            <!-- 
                                <t <t t-debug="pdb"/> 
                            -->
                        </h2>
                        <div class="row mt-4 mb-2" id="informations">
                            <div t-if="o.user_id" class="col-auto col-3 mw-100 mb-2" name="user">
                                <strong>User: </strong><br/>
                                <span t-field="o.user_id.name"/>
                            </div> 
                            <div t-if="o.date" class="col-auto col-3 mw-100 mb-2" name="date">
                                <strong>Date: </strong><br/>
                                <span t-field="o.date"/>
                            </div>                             
                        </div>
                        <table class="table table-sm o_main_table table-borderless mt-4">
                            <thead style="display: table-row-group">
                                <tr>
                                    <th name="th_action" class="text-start">Action</th>
                                    <th name="th_state" class="text-end">State</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="o.task_ids" t-as="action">
                                    <tr>
                                        <td name="td_action" class="text-start">
                                            <span t-field="action.name" />
                                        </td>
                                        <td name="td_state" class="text-end">
                                            <span t-field="action.state" />
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
                <!--<t t-call="sports_association_sergio.report_sport_issue_simple"/>    -->
            </t> 
        </t>
    </template>

    <template id="report_sport_issue_simple">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <table class="table table-sm o_main_table table-borderless mt-4">
                        <thead style="display: table-row-group">
                            <tr>
                                <th name="th_name" class="text-start">Name</th>
                                <th name="th_date" class="text-end">Date</th>
                                <th name="th_user" class="text-end">User</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-foreach="docs" t-as="o">
                                <tr>
                                    <td name="td_name" class="text-start">
                                        <span t-field="o.name" />
                                    </td>
                                    <td name="td_date" class="text-end">
                                        <span t-field="o.date" />
                                    </td>
                                    <td name="td_user" class="text-end">
                                        <span t-field="o.user_id" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
    

    <record id="paperformat_sport_issue" model="report.paperformat">
        <field name="name">Sport Issue Paper Format</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">180</field>
        <field name="page_width">180</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">3</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">3</field>
        <field name="dpi">90</field>
    </record>    

    <record id="action_report_sport_issue" model="ir.actions.report">
        <field name="name">Issue</field>
        <field name="model">sport.issue</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sports_association_sergio.report_sport_issue</field>
        <field name="report_file">sports_association_sergio.report_sport_issue</field>
        <field name="print_report_name">(object.name)</field>
        <!--<field name="paperformat_id" ref="paperformat_sport_issue"></field>        -->
        <field name="binding_model_id" ref="model_sport_issue"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_sport_issue_simple" model="ir.actions.report">
        <field name="name">Issue - Simple</field>
        <field name="model">sport.issue</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sports_association_sergio.report_sport_issue_simple</field>
        <field name="report_file">sports_association_sergio.report_sport_issue_simple</field>
        <field name="print_report_name">(object.name)</field>
        <field name="binding_model_id" ref="model_sport_issue"/>
        <field name="binding_type">report</field>
    </record>

</odoo>